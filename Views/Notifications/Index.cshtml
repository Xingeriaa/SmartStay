@model List<do_an_tot_nghiep.Models.Notification>
@{
    ViewData["Title"] = "Trung tâm thông báo";
    var total = Model?.Count ?? 0;
}

<div class="container-fluid px-0" style="max-width: 850px;">
    @* --- HEADER --- *@
    <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index" class="text-muted text-decoration-none"><i class="fas fa-home me-1"></i>Trang chủ</a></li>
                    <li class="breadcrumb-item active">Thông báo</li>
                </ol>
            </nav>
            <h1 class="fw-bold mb-0" style="font-size:1.75rem;">Nhật ký hệ thống</h1>
            <p class="text-muted mb-0 mt-1">Tất cả hoạt động vận hành được ghi nhận tự động</p>
        </div>
        <button class="btn btn-light border btn-custom shadow-sm" onclick="location.reload()">
            <i class="fas fa-sync-alt me-1"></i> Làm mới
        </button>
    </div>

    @* --- QUICK STATS (Tối giản) --- *@
    <div class="row g-3 mb-4">
        <div class="col-md-12">
            <div class="main-card p-3 bg-gradient-light border-0 shadow-sm animate-fade-up">
                <div class="d-flex align-items-center justify-content-between px-3">
                    <div class="d-flex align-items-center gap-3">
                        <div class="stat-icon-wrapper bg-white shadow-sm" style="color: #6c5ce7;">
                            <i class="fas fa-history"></i>
                        </div>
                        <div>
                            <div class="small text-muted fw-bold text-uppercase">Tình trạng ghi nhận</div>
                            <div class="fw-bold fs-5">@total sự kiện trong 30 ngày qua</div>
                        </div>
                    </div>
                    <i class="fas fa-chevron-right text-muted opacity-25"></i>
                </div>
            </div>
        </div>
    </div>

    @* --- ACTIVITY LIST --- *@
    <div class="main-card animate-fade-up" style="animation-delay:.1s">
        <div class="card-header-styled bg-white">
            <div class="d-flex align-items-center gap-2">
                <div class="p-2 bg-soft-brand rounded-3">
                    <i class="fas fa-stream text-brand"></i>
                </div>
                <h5 class="fw-bold mb-0">Dòng thời gian sự kiện</h5>
            </div>
            @* Bộ lọc nhanh bằng nút bấm *@
            <div class="btn-group btn-group-sm rounded-pill border p-1 bg-light">
                <button class="btn btn-white border-0 rounded-pill shadow-sm px-3 active" onclick="filterType('all', this)">Tất cả</button>
                <button class="btn btn-light border-0 rounded-pill px-3" onclick="filterType('urgent', this)">Quan trọng</button>
            </div>
        </div>

        <div class="p-3">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="mb-3 opacity-25">
                        <i class="fas fa-ghost fa-4x"></i>
                    </div>
                    <h6 class="text-muted fw-bold">Hệ thống chưa ghi nhận sự kiện nào</h6>
                </div>
            }
            else
            {
                <div class="timeline-container">
                    @foreach (var noti in Model)
                    {
                        // Logic phân loại đẹp & đơn giản dựa trên từ khóa
                        string typeClass = "info";
                        string icon = "fa-info-circle";
                        bool isUrgent = false;

                        if (noti.Title.ToLower().Contains("hỏng") || noti.Title.ToLower().Contains("cảnh báo"))
                        {
                            typeClass = "urgent"; icon = "fa-exclamation-triangle"; isUrgent = true;
                        }
                        else if (noti.Title.ToLower().Contains("tiền") || noti.Title.ToLower().Contains("thanh toán"))
                        {
                            typeClass = "money"; icon = "fa-wallet";
                        }
                        else if (noti.Title.ToLower().Contains("hợp đồng"))
                        {
                            typeClass = "contract"; icon = "fa-file-signature";
                        }

                        <div class="timeline-item py-3 px-3 rounded-4 mb-2 @typeClass" data-urgent="@isUrgent.ToString().ToLower()">
                            <div class="d-flex gap-3">
                                <div class="timeline-icon">
                                    <i class="fas @icon"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between">
                                        <h6 class="fw-bold mb-1">@noti.Title</h6>
                                        <span class="text-muted small">@noti.CreatedAt.ToString("HH:mm, dd/MM")</span>
                                    </div>
                                    <div class="text-muted small mb-0">@noti.Content</div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <div class="px-4 py-3 border-top bg-light rounded-bottom text-center">
            <button class="btn btn-sm btn-link text-decoration-none text-muted fw-bold">Xem các thông báo cũ hơn</button>
        </div>
    </div>
</div>

<style>
    /* Timeline Layout */
    .timeline-container {
        position: relative;
    }

    .timeline-item {
        transition: all 0.2s ease;
        border: 1px solid #f1f3f5;
    }

        .timeline-item:hover {
            background-color: #f8f9fa !important;
            border-color: #dee2e6;
            transform: translateX(5px);
        }

    /* Icon Styles */
    .timeline-icon {
        width: 40px;
        height: 40px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        font-size: 1.1rem;
    }

    /* Phân loại màu sắc (Elegant & Soft) */
    .timeline-item.info {
        border-left: 4px solid #0984e3;
    }

        .timeline-item.info .timeline-icon {
            background: #e1f5fe;
            color: #0288d1;
        }

    .timeline-item.urgent {
        border-left: 4px solid #d63031;
        background: #fff5f5;
    }

        .timeline-item.urgent .timeline-icon {
            background: #ffebee;
            color: #d32f2f;
        }

        .timeline-item.urgent h6 {
            color: #c62828;
        }

    .timeline-item.money {
        border-left: 4px solid #00b894;
    }

        .timeline-item.money .timeline-icon {
            background: #e8f5e9;
            color: #2e7d32;
        }

    .timeline-item.contract {
        border-left: 4px solid #6c5ce7;
    }

        .timeline-item.contract .timeline-icon {
            background: #f3e5f5;
            color: #7b1fa2;
        }

    /* Utilities */
    .bg-soft-brand {
        background: #6c5ce715;
    }

    .text-brand {
        color: #6c5ce7;
    }

    .bg-gradient-light {
        background: linear-gradient(135deg, #f8f9fa, #ffffff);
        border: 1px solid #edf2f7;
    }
</style>

<script>
    function filterType(type, btn) {
        // Update Active Button
        document.querySelectorAll('.btn-group .btn').forEach(b => b.classList.remove('active', 'btn-white', 'shadow-sm'));
        btn.classList.add('active', 'btn-white', 'shadow-sm');

        // Filter Logic
        const items = document.querySelectorAll('.timeline-item');
        items.forEach(item => {
            if (type === 'all') item.style.display = 'block';
            else if (type === 'urgent') {
                item.style.display = (item.dataset.urgent === 'true') ? 'block' : 'none';
            }
        });
    }
</script>