@model List<do_an_tot_nghiep.Models.Notification>
@{
    ViewData["Title"] = "Thông báo hệ thống";
}
<style>
    .noti-card { border-radius:14px; padding:1.2rem; transition:transform 0.2s, box-shadow 0.2s; border:1px solid #e9ecef; }
    .noti-card:hover { transform:translateY(-3px); box-shadow:0 8px 24px rgba(0,0,0,0.1); border-color:#6c5ce7; }
</style>
<div class="container-fluid px-0 py-2" style="max-width: 900px;">
    <div class="d-flex align-items-center mb-4">
        <h1 class="fw-bold mb-0" style="font-size:1.6rem;">
            <i class="fas fa-bell text-primary me-2"></i> Hệ thống thông báo
        </h1>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger shadow-sm border-0"><i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]</div>
    }

    @if (!Model.Any())
    {
        <div class="text-center p-5 bg-white border rounded">
            <i class="fas fa-inbox fa-3x text-muted mb-3 opacity-50"></i>
            <h5 class="text-secondary fw-bold">Chưa có thông báo nào</h5>
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var noti in Model)
            {
                <div class="col-12">
                    <div class="noti-card bg-white position-relative">
                        @if (!noti.IsRead)
                        {
                            <span class="position-absolute top-0 start-100 translate-middle p-2 bg-danger border border-light rounded-circle">
                                <span class="visually-hidden">Chưa đọc</span>
                            </span>
                        }
                        <h6 class="fw-bold text-dark">@noti.Title</h6>
                        <p class="text-muted small mb-2">@noti.Content</p>
                        <div class="text-secondary" style="font-size: 0.8rem;">
                            <i class="fas fa-clock me-1"></i> @noti.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
