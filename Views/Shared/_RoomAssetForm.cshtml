@model do_an_tot_nghiep.Models.RoomAsset

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<input type="hidden" asp-for="Id" />
<input type="hidden" asp-for="RoomId" />

<div class="mb-3">
    <label asp-for="AssetName" class="form-label"></label>
    <input asp-for="AssetName" class="form-control" />
    <span asp-validation-for="AssetName" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="SerialNumber" class="form-label"></label>
    <input asp-for="SerialNumber" class="form-control" />
    <span asp-validation-for="SerialNumber" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Quantity" class="form-label"></label>
    <input asp-for="Quantity" type="number" min="1" class="form-control" />
    <span asp-validation-for="Quantity" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Status" class="form-label"></label>
    <select asp-for="Status" class="form-select">
        <option value="1">Hoạt động</option>
        <option value="2">Hư hỏng</option>
        <option value="3">Thanh lý</option>
    </select>
    <span asp-validation-for="Status" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="PurchaseDate" class="form-label"></label>
    <input asp-for="PurchaseDate" type="date" class="form-control" />
    <span asp-validation-for="PurchaseDate" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="WarrantyExpiry" class="form-label"></label>
    <input asp-for="WarrantyExpiry" type="date" class="form-control" />
    <span asp-validation-for="WarrantyExpiry" class="text-danger"></span>
</div>
