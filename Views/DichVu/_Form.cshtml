@model do_an_tot_nghiep.Models.DichVu
@{
    bool isEdit = Model.Id > 0;
    string formTitle = isEdit ? $"Chỉnh sửa dịch vụ #{Model.Id}" : "Thêm dịch vụ mới";
}

<div class="row g-3 mb-3">
    <div class="col-md-8">
        <label class="form-label fw-semibold">Tên dịch vụ <span class="text-danger">*</span></label>
        <input asp-for="Ten" class="form-control" placeholder="VD: Điện, Nước, Internet..." />
        <span asp-validation-for="Ten" class="text-danger small"></span>
    </div>
    <div class="col-md-4">
        <label class="form-label fw-semibold">Loại tính phí <span class="text-danger">*</span></label>
        <select asp-for="LoaiDichVu" asp-items="ViewBag.LoaiDichVuList" class="form-select">
            <option value="">-- Chọn loại --</option>
        </select>
        <span asp-validation-for="LoaiDichVu" class="text-danger small"></span>
    </div>
    <div class="col-md-4">
        <label class="form-label fw-semibold">Đơn giá (đ)</label>
        <input asp-for="DonGia" class="form-control" type="number" min="0" step="1000" placeholder="0" />
    </div>
    <div class="col-md-4">
        <label class="form-label fw-semibold">Ghi chú</label>
        <input asp-for="GhiChu" class="form-control" placeholder="Tuỳ chọn..." />
    </div>
    <div class="col-md-4 d-flex align-items-end">
        <div class="form-check form-switch mt-2">
            <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch">
            <label asp-for="IsActive" class="form-check-label fw-semibold">Đang hoạt động</label>
        </div>
    </div>
</div>
