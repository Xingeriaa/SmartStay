@model do_an_tot_nghiep.Models.DichVu
@{
    ViewData["Title"] = "Thiết Lập Dịch Vụ Mới";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/animate.css@4.1.1/animate.min.css">

<style>
    /* 1. Hệ thống biến màu và Phông chữ */
    :root {
        --glass-white: rgba(255, 255, 255, 0.9);
        --primary-color: var(--brand-600);
        --accent-grad: var(--brand-gradient);
        --dark-text: #2d3748;
        --light-text: #718096;
    }

    body {
        background: var(--bg-body);
        font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        overflow-x: hidden;
    }

    /* 2. Container chính với hiệu ứng hạt nền */
    .premium-container {
        min-height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
        position: relative;
    }

    /* 3. Card tổng hợp chia đôi */
    .glass-card {
        background: white;
        border-radius: 30px;
        box-shadow: 0 25px 50px rgba(0,0,0,0.1);
        display: flex;
        overflow: hidden;
        width: 100%;
        max-width: 1100px;
        min-height: 650px;
        position: relative;
        z-index: 10;
        border: 1px solid rgba(255,255,255,0.4);
    }

    /* 4. Panel bên trái - Hướng dẫn & Hình ảnh */
    .side-info {
        background: var(--accent-grad);
        width: 40%;
        padding: 60px 40px;
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        position: relative;
    }

        .side-info::after {
            content: "";
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            background: url('https://www.transparenttextures.com/patterns/cubes.png');
            opacity: 0.2;
        }

    .info-item {
        margin-bottom: 30px;
        display: flex;
        align-items: flex-start;
        gap: 15px;
        transition: transform 0.3s;
    }

        .info-item:hover {
            transform: translateX(10px);
        }

    .info-icon {
        background: rgba(255,255,255,0.2);
        width: 45px;
        height: 45px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        flex-shrink: 0;
    }

    /* 5. Panel bên phải - Form nhập liệu */
    .form-content {
        width: 60%;
        padding: 50px 60px;
        background: white;
    }

    .section-title {
        font-size: 28px;
        font-weight: 800;
        color: var(--dark-text);
        margin-bottom: 8px;
    }

    .label-premium {
        display: block;
        font-weight: 700;
        font-size: 13px;
        color: var(--primary-color);
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 8px;
    }

    /* 6. Thiết kế Input phong cách hiện đại */
    .input-wrapper {
        position: relative;
        margin-bottom: 25px;
    }

        .input-wrapper i {
            position: absolute;
            left: 18px;
            top: 45px;
            color: #cbd5e0;
            transition: 0.3s;
        }

    .input-modern {
        width: 100%;
        padding: 14px 18px 14px 45px;
        background: #f8fafc;
        border: 2px solid #f1f5f9;
        border-radius: 16px;
        font-size: 15px;
        color: #4a5568;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

        .input-modern:focus {
            background: white;
            border-color: var(--brand-600);
            box-shadow: 0 10px 20px rgba(0, 184, 148, 0.12);
            outline: none;
        }

    .input-wrapper:focus-within i {
        color: var(--brand-600);
        transform: scale(1.2);
    }

    /* 7. Nút bấm phong cách mới */
    .actions-group {
        display: flex;
        gap: 15px;
        margin-top: 40px;
    }

    .btn-lux {
        padding: 15px 35px;
        border-radius: 18px;
        font-weight: 700;
        font-size: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
        transition: all 0.4s;
        border: none;
        cursor: pointer;
    }

    .btn-lux-primary {
        background: var(--accent-grad);
        color: white;
        box-shadow: 0 10px 20px rgba(118, 75, 162, 0.3);
        flex-grow: 1;
        justify-content: center;
    }

        .btn-lux-primary:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(118, 75, 162, 0.4);
        }

    .btn-lux-outline {
        background: #f1f5f9;
        color: #64748b;
    }

        .btn-lux-outline:hover {
            background: #e2e8f0;
            color: #1e293b;
        }

    /* 8. Responsive */
    @@media (max-width: 992px) {
        .glass-card {
            flex-direction: column;
        }

        .side-info, .form-content {
            width: 100%;
        }

        .side-info {
            padding: 40px;
        }
    }

    /* 9. Hiệu ứng nền */
    .floating-circle {
        position: absolute;
        border-radius: 50%;
        background: var(--accent-grad);
        filter: blur(80px);
        opacity: 0.1;
        z-index: 1;
    }
</style>

<div class="premium-container animate__animated animate__fadeIn">
    <div class="floating-circle" style="width: 400px; height: 400px; top: -100px; right: -100px;"></div>
    <div class="floating-circle" style="width: 300px; height: 300px; bottom: -50px; left: -100px;"></div>

    <div class="glass-card">
        <div class="side-info animate__animated animate__slideInLeft">
            <h1 class="fw-bold mb-4">Khởi tạo Dịch Vụ</h1>
            <p class="mb-5 opacity-75">Hãy điền đầy đủ thông tin để hệ thống tự động cập nhật vào danh mục kinh doanh của bạn.</p>

            <div class="info-item">
                <div class="info-icon"><i class="fas fa-check"></i></div>
                <div>
                    <h6 class="mb-1 fw-bold">Chính xác</h6>
                    <small class="opacity-75">Đảm bảo đơn giá đúng với thực tế để tránh sai sót hóa đơn.</small>
                </div>
            </div>

            <div class="info-item">
                <div class="info-icon"><i class="fas fa-shield-alt"></i></div>
                <div>
                    <h6 class="mb-1 fw-bold">Bảo mật</h6>
                    <small class="opacity-75">Mọi dữ liệu dịch vụ được mã hóa và lưu trữ an toàn.</small>
                </div>
            </div>

            <div class="info-item">
                <div class="info-icon"><i class="fas fa-magic"></i></div>
                <div>
                    <h6 class="mb-1 fw-bold">Tự động</h6>
                    <small class="opacity-75">Hệ thống sẽ đồng bộ dịch vụ mới lên các bảng quản lý khác.</small>
                </div>
            </div>

          
        </div>

        <div class="form-content">
            <div class="mb-5">
                <h2 class="section-title">Nhập Thông Tin</h2>
                <div style="width: 50px; height: 4px; background: var(--accent-grad); border-radius: 2px;"></div>
            </div>

            <form asp-action="Create" method="post" id="mainForm">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                <div class="input-wrapper">
                    <label asp-for="Ten" class="label-premium">Tên dịch vụ hiển thị</label>
                    <i class="fas fa-concierge-bell"></i>
                    <input asp-for="Ten" class="input-modern" placeholder="" required />
                    <span asp-validation-for="Ten" class="text-danger small"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="input-wrapper">
                            <label asp-for="LoaiDichVu" class="label-premium">Phân nhóm loại</label>
                            <i class="fas fa-th-large"></i>
                            <select asp-for="LoaiDichVu" class="input-modern" required>
                                <option value="">Chọn loại hình</option>
                                @if (ViewBag.LoaiDichVuList != null)
                                {
                                    foreach (var loai in ViewBag.LoaiDichVuList)
                                    {
                                        <option value="@loai">@loai</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input-wrapper">
                            <label asp-for="DonGia" class="label-premium">Đơn giá bán (VNĐ)</label>
                            <i class="fas fa-money-bill-wave"></i>
                            <input asp-for="DonGia" type="number" class="input-modern" placeholder="0" required />
                            <span asp-validation-for="DonGia" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="input-wrapper">
                    <label asp-for="GhiChu" class="label-premium">Mô tả hoặc ghi chú thêm</label>
                    <i class="fas fa-edit"></i>
                    <textarea asp-for="GhiChu" class="input-modern" rows="4" placeholder="Nhập mô tả chi tiết nếu có..."></textarea>
                </div>

                <div class="actions-group">
                    <a asp-action="Index" class="btn btn-lux btn-lux-outline">
                        <i class="fas fa-chevron-left"></i> Thoát
                    </a>
                    <button type="submit" class="btn btn-lux btn-lux-primary">
                        <i class="fas fa-save"></i> Xác nhận & Lưu lại
                    </button>
                </div>
            </form>

            <div class="mt-5 text-center">
                <img src="https://img.icons8.com/bubbles/100/000000/data-configuration.png" width="60" alt="icon">
                <p class="text-muted small mt-2">Đồ án tốt nghiệp - Hệ thống quản lý chuyên nghiệp 2024</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function() {
            // Hiệu ứng khi focus vào ô nhập liệu
            $(".input-modern").focus(function() {
                $(this).parent().find('i').css("transform", "scale(1.3) translateY(-2px)");
            }).blur(function() {
                $(this).parent().find('i').css("transform", "scale(1) translateY(0)");
            });

            // Xử lý xác nhận lưu bằng SweetAlert2
            $('#mainForm').on('submit', function(e) {
                if ($(this).valid()) {
                    e.preventDefault();
                    Swal.fire({
                        title: 'Bạn chắc chắn chứ?',
                        text: "Dịch vụ mới sẽ được thêm vào hệ thống ngay lập tức!",
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonColor: '#00b894',
                        cancelButtonColor: '#718096',
                        confirmButtonText: 'Đồng ý, lưu ngay!',
                        cancelButtonText: 'Hủy kiểm tra lại'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            this.submit();
                        }
                    });
                }
            });
        });
    </script>
}