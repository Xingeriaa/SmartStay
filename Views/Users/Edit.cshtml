@model do_an_tot_nghiep.ViewModels.UserFormViewModel

@{
    ViewData["Title"] = "Đổi Quyền Tài Khoản";
}

<div class="card shadow mb-4 col-md-8 mx-auto border-left-warning">
    <div class="card-header py-3 bg-white">
        <h6 class="m-0 font-weight-bold text-warning"><i class="fas fa-user-cog"></i> Sửa Nhóm Quyền & Bảo Mật: @Model.Username</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            
            <div class="alert alert-info">
                <strong><i class="fas fa-info-circle"></i> Thông báo từ Hệ thống RBAC:</strong> Việc nâng/hạ quyền hạn (Role) sẽ có hiệu lực tức thời.
            </div>

            <partial name="_Form" model="Model" />
            
            <div class="mt-4 text-end bg-light p-3 rounded border">
                <a asp-action="Index" class="btn btn-secondary me-2"> Bỏ Qua & Quay Lại</a>
                <button type="submit" class="btn btn-warning fw-bold text-dark"><i class="fas fa-shield-alt"></i> Xác Nhận Update Token</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
