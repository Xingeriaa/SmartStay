@model do_an_tot_nghiep.Models.PhongTro

@{
    ViewData["Title"] = "Thêm phòng mới - Professional UI";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Đảm bảo Layout này tồn tại

    // --- LOGIC SERVER SIDE GIỮ NGUYÊN ---
    var nhaInfo = ViewBag.ThongTinNha as do_an_tot_nghiep.Models.NhaTro;
    var dichVuNha = nhaInfo?.DanhSachDichVu?.Split(new[] { ',', ';' }, StringSplitOptions.RemoveEmptyEntries) ?? new string[] { };

}

<style>
    /* --- 1. RESET & VARIABLES --- */
    :root {
        --c-primary: var(--brand-600);
        --c-primary-light: rgba(0, 184, 148, 0.12);
        --c-secondary: var(--accent-500);
        --c-success: var(--brand-600);
        --c-danger: #ff7675;
        --c-warning: #fdcb6e;
        --c-text-main: var(--ink-900);
        --c-text-light: var(--ink-600);
        --c-bg-body: var(--bg-body);
        --c-bg-card: var(--bg-surface);
        --c-border: var(--border-color);
        --font-main: 'Inter', 'Segoe UI', system-ui, -apple-system, sans-serif;
        --shadow-sm: 0 2px 8px rgba(0,0,0,0.05);
        --shadow-md: 0 8px 24px rgba(0,0,0,0.08);
        --shadow-lg: 0 15px 35px rgba(0,0,0,0.1);
        --shadow-hover: 0 20px 40px rgba(0, 184, 148, 0.18);
        --radius-sm: 8px;
        --radius-md: 16px;
        --radius-lg: 24px;
        --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    }

    /* --- 2. LAYOUT --- */
    body {
        background-color: var(--c-bg-body);
        font-family: var(--font-main);
        color: var(--c-text-main);
        line-height: 1.6;
        overflow-x: hidden;
    }

    .main-wrapper {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem;
    }

    .page-header {
        margin-bottom: 2.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        animation: slideDown 0.6s ease-out;
    }

    .page-title h1 {
        font-size: 2rem;
        font-weight: 800;
        background: linear-gradient(to right, var(--c-primary), var(--c-secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 0.5rem;
    }

    .page-title p {
        color: var(--c-text-light);
        font-size: 1rem;
    }

    /* --- 3. GRID SYSTEM (FORM LEFT - PREVIEW RIGHT) --- */
    .create-grid {
        display: grid;
        grid-template-columns: 1.6fr 1fr; /* Form lớn hơn Preview một chút */
        gap: 2.5rem;
        align-items: start;
    }

    /* --- 4. CARD STYLES --- */
    .app-card {
        background: var(--c-bg-card);
        border-radius: var(--radius-md);
        box-shadow: var(--shadow-md);
        padding: 2.5rem;
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(255,255,255,0.5);
        animation: fadeIn 0.8s ease-out;
    }

        .app-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 6px;
            background: linear-gradient(90deg, var(--c-primary), var(--c-secondary));
        }

    .section-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--c-text-main);
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid var(--c-bg-body);
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

        .section-title i {
            color: var(--c-primary);
            font-size: 1.4rem;
            background: var(--c-primary-light);
            padding: 8px;
            border-radius: 8px;
        }

    /* --- 5. FORM CONTROLS --- */
    .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }

    .form-label {
        font-weight: 600;
        font-size: 0.9rem;
        color: var(--c-text-main);
        margin-bottom: 0.5rem;
        display: block;
        transition: var(--transition);
    }

    .form-control-custom {
        width: 100%;
        padding: 0.9rem 1.2rem;
        font-size: 1rem;
        font-family: inherit;
        border: 2px solid var(--c-border);
        border-radius: var(--radius-sm);
        background-color: #fff;
        transition: var(--transition);
        color: var(--c-text-main);
    }

        .form-control-custom:focus {
            outline: none;
            border-color: var(--c-primary);
            box-shadow: 0 0 0 4px rgba(78, 84, 200, 0.1);
            transform: translateY(-2px);
        }

        .form-control-custom:hover {
            border-color: #b2bec3;
        }

        .form-control-custom[readonly] {
            background-color: #f8f9fa;
            cursor: not-allowed;
            color: #7f8c8d;
        }

    /* Custom Select Styling */
    .select-wrapper {
        position: relative;
    }

        .select-wrapper::after {
            content: '\F229'; /* Bootstrap icon chevron-down */
            font-family: 'bootstrap-icons';
            position: absolute;
            right: 1.2rem;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
            color: var(--c-text-light);
        }

    /* Number Input Spinners Removal */
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* --- 6. CUSTOM RADIO CARDS (Gender, Furniture) --- */
    .radio-group-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
        gap: 1rem;
    }

    .radio-card-input {
        display: none;
    }

    .radio-card-label {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 1.5rem;
        background: var(--c-bg-body);
        border: 2px solid transparent;
        border-radius: var(--radius-sm);
        cursor: pointer;
        transition: var(--transition);
        text-align: center;
        height: 100%;
    }

        .radio-card-label i {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            color: var(--c-text-light);
            transition: var(--transition);
        }

        .radio-card-label span {
            font-weight: 600;
            font-size: 0.95rem;
            color: var(--c-text-light);
        }

    .radio-card-input:checked + .radio-card-label {
        background: var(--c-primary-light);
        border-color: var(--c-primary);
        box-shadow: var(--shadow-sm);
    }

        .radio-card-input:checked + .radio-card-label i,
        .radio-card-input:checked + .radio-card-label span {
            color: var(--c-primary);
        }

    /* --- 7. SERVICES TAGS (Custom Checkboxes) --- */
    .services-container {
        display: flex;
        flex-wrap: wrap;
        gap: 0.8rem;
    }

    .service-checkbox {
        display: none;
    }

    .service-tag {
        display: inline-flex;
        align-items: center;
        padding: 0.6rem 1.2rem;
        background: #fff;
        border: 1px solid var(--c-border);
        border-radius: 50px;
        cursor: pointer;
        transition: var(--transition);
        font-size: 0.9rem;
        font-weight: 500;
        user-select: none;
        color: var(--c-text-light);
    }

        .service-tag:hover {
            background: #f1f2f6;
            transform: translateY(-1px);
        }

        .service-tag i {
            margin-right: 0.5rem;
            font-size: 1.1rem;
        }

    .service-checkbox:checked + .service-tag {
        background: var(--c-primary);
        color: #fff;
        border-color: var(--c-primary);
        box-shadow: 0 4px 10px rgba(78, 84, 200, 0.3);
    }

    /* --- 8. UPLOAD AREA --- */
    .upload-area {
        border: 2px dashed var(--c-border);
        border-radius: var(--radius-md);
        padding: 3rem 1.5rem;
        text-align: center;
        background: #fafafa;
        transition: var(--transition);
        cursor: pointer;
        position: relative;
    }

        .upload-area:hover, .upload-area.drag-over {
            border-color: var(--c-primary);
            background: var(--c-primary-light);
        }

    .upload-icon {
        font-size: 3.5rem;
        color: #b2bec3;
        margin-bottom: 1rem;
        transition: var(--transition);
    }

    .upload-area:hover .upload-icon {
        color: var(--c-primary);
        transform: scale(1.1);
    }

    .upload-text h5 {
        font-weight: 700;
        color: var(--c-text-main);
        margin-bottom: 0.5rem;
    }

    .upload-text p {
        color: var(--c-text-light);
        font-size: 0.9rem;
    }

    /* --- 9. LIVE PREVIEW CARD (RIGHT SIDE) --- */
    .sticky-sidebar {
        position: sticky;
        top: 2rem;
    }

    .preview-phone-mockup {
        background: #fff;
        border-radius: 30px;
        box-shadow: var(--shadow-lg);
        border: 8px solid #2d3436;
        padding: 10px;
        max-width: 380px;
        margin: 0 auto;
        animation: slideLeft 0.8s ease-out;
    }

    .preview-screen {
        background: #f8f9fa;
        border-radius: 20px;
        overflow: hidden;
        min-height: 500px;
        position: relative;
    }

    .preview-header {
        position: relative;
        height: 200px;
        background-color: #dfe6e9;
        overflow: hidden;
    }

    .preview-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s;
    }

    .preview-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background: rgba(0,0,0,0.6);
        color: #fff;
        padding: 5px 12px;
        border-radius: 12px;
        font-size: 0.75rem;
        backdrop-filter: blur(4px);
    }

    .preview-body {
        padding: 1.5rem;
        background: #fff;
        position: relative;
        margin-top: -20px;
        border-radius: 20px 20px 0 0;
    }

    .preview-name {
        font-size: 1.4rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        color: var(--c-text-main);
    }

    .preview-price {
        font-size: 1.25rem;
        color: var(--c-primary);
        font-weight: 700;
        margin-bottom: 1rem;
        display: flex;
        align-items: baseline;
    }

        .preview-price small {
            font-size: 0.85rem;
            color: var(--c-text-light);
            font-weight: 400;
            margin-left: 5px;
        }

    .preview-features {
        display: flex;
        gap: 1rem;
        margin-bottom: 1.5rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid #f1f2f6;
    }

    .p-feat-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        font-size: 0.8rem;
        color: var(--c-text-light);
        flex: 1;
        text-align: center;
        background: #f8f9fa;
        padding: 8px;
        border-radius: 8px;
    }

        .p-feat-item i {
            font-size: 1.2rem;
            margin-bottom: 4px;
            color: var(--c-primary);
        }

    .preview-services-list {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
        margin-bottom: 1.5rem;
    }

    .p-srv-tag {
        font-size: 0.7rem;
        background: #eef2ff;
        color: var(--c-primary);
        padding: 4px 10px;
        border-radius: 4px;
        font-weight: 600;
    }

    .preview-note-box {
        font-size: 0.85rem;
        color: #636e72;
        background: #fff8e1;
        padding: 12px;
        border-radius: 8px;
        border-left: 3px solid var(--c-warning);
        font-style: italic;
    }

    /* --- 10. ACTION BUTTONS --- */
    .action-bar {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn-custom {
        padding: 0.9rem 2rem;
        border-radius: var(--radius-sm);
        font-weight: 600;
        cursor: pointer;
        transition: var(--transition);
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1rem;
        text-decoration: none;
    }

    .btn-secondary-c {
        background: #fff;
        border: 2px solid var(--c-border);
        color: var(--c-text-light);
    }

        .btn-secondary-c:hover {
            background: #f1f2f6;
            border-color: #b2bec3;
            color: var(--c-text-main);
        }

    .btn-primary-c {
        background: linear-gradient(135deg, var(--c-primary), var(--c-secondary));
        color: #fff;
        box-shadow: 0 4px 15px rgba(78, 84, 200, 0.4);
    }

        .btn-primary-c:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(78, 84, 200, 0.5);
        }

    /* --- ANIMATIONS KEYFRAMES --- */
    @@keyframes slideDown {
        from

    {
        opacity: 0;
        transform: translateY(-20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
    @@keyframes slideLeft {
        from

    {
        opacity: 0;
        transform: translateX(30px);
    }

    to {
        opacity: 1;
        transform: translateX(0);
    }

    }
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }

    /* Responsive */
    @@media (max-width: 992px) {
        .create-grid

    {
        grid-template-columns: 1fr;
    }

    .sticky-sidebar {
        position: static;
        margin-top: 2rem;
    }

    .preview-phone-mockup {
        margin: 0 auto;
        width: 100%;
        max-width: 100%;
    }

    }
    /* CSS NÂNG CAO - MODERN SERVICE SELECTOR */
    .service-brand-icon {
        width: 45px;
        height: 45px;
        background: var(--c-primary);
        color: #fff;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.4rem;
        box-shadow: 0 5px 15px rgba(78, 84, 200, 0.3);
    }

    .service-dynamic-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 1.5rem;
    }

    .modern-service-card {
        width: 100%;
        cursor: pointer;
        position: relative;
    }

    .hidden-service-input {
        display: none;
    }

    .card-visual-layer {
        background: #fff;
        border: 2px solid #f1f5f9;
        border-radius: 20px;
        padding: 20px;
        display: flex;
        align-items: center;
        gap: 15px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .modern-service-card:hover .card-visual-layer {
        border-color: var(--c-primary);
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.05);
    }

    .icon-section {
        width: 50px;
        height: 50px;
        background: #f8fafc;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: #94a3b8;
        transition: all 0.3s ease;
    }

    .s-title {
        font-weight: 800;
        color: #1e293b;
        font-size: 0.95rem;
    }

    .s-meta {
        font-size: 0.8rem;
        font-weight: 600;
        color: var(--c-primary);
    }

        .s-meta .unit {
            color: #94a3b8;
            font-weight: 400;
        }

    .check-box-custom {
        margin-left: auto;
        width: 24px;
        height: 24px;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        transition: all 0.3s ease;
    }

    /* Khi được chọn */
    .hidden-service-input:checked + .card-visual-layer {
        background: #fcfdff;
        border-color: var(--c-primary);
    }

        .hidden-service-input:checked + .card-visual-layer .icon-section {
            background: var(--c-primary);
            color: #fff;
            transform: rotateY(360deg);
        }

        .hidden-service-input:checked + .card-visual-layer .check-box-custom {
            background: var(--c-primary);
            border-color: var(--c-primary);
        }

    .active-glow {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at center, rgba(78, 84, 200, 0.08), transparent);
        opacity: 0;
        transition: 0.4s;
    }

    .hidden-service-input:checked + .card-visual-layer .active-glow {
        opacity: 1;
    }

    .bg-soft-primary {
        background-color: rgba(78, 84, 200, 0.1);
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="main-wrapper">

    <div class="page-header">
        <div class="page-title">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1" style="background: none; padding: 0;">
                    <li class="breadcrumb-item"><a href="#" class="text-decoration-none text-muted">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="#" class="text-decoration-none text-muted">Quản lý nhà</a></li>
                    <li class="breadcrumb-item active text-primary" aria-current="page">Thêm phòng</li>
                </ol>
            </nav>
            <h1>Thêm Phòng Mới</h1>
        </div>
        <div class="d-none d-md-block">
            <span class="badge bg-primary fs-6 p-2 rounded-pill px-3">
                <i class="bi bi-clock-history me-1"></i> @DateTime.Now.ToString("dd/MM/yyyy")
            </span>
        </div>
    </div>

    <div class="create-grid">

        <div class="left-column">
            <form asp-action="Create" enctype="multipart/form-data" id="createRoomForm">
                <input type="hidden" asp-for="NhaTroId" />

                <div class="app-card mb-4">
                    <div class="section-title">
                        <i class="bi bi-info-circle"></i> Thông tin cơ bản
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Tên phòng / Số phòng <span class="text-danger">*</span></label>
                                <input asp-for="TenPhong" class="form-control-custom" id="inputName" placeholder="Ví dụ: Phòng 101, P.VIP-01" required oninput="updatePreview()" />
                                <span asp-validation-for="TenPhong" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group select-wrapper">
                                <label class="form-label">Tầng <span class="text-danger">*</span></label>
                                <select asp-for="Tang" class="form-control-custom" id="inputFloor" onchange="updatePreview()">
                                    @for (int i = 1; i <= (nhaInfo?.LoaiNha > 0 ? nhaInfo.LoaiNha : 8); i++)
                                    {
                                        <option value="@i">Tầng @i</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Diện tích (m²)</label>
                                <input asp-for="DienTich" type="number" class="form-control-custom" id="inputArea" placeholder="25" oninput="updatePreview()" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Số người tối đa</label>
                                <div class="input-group">
                                    <input asp-for="SoLuongNguoi" type="number" class="form-control-custom" id="inputCapacity" value="2" min="1" max="10" oninput="updatePreview()" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="app-card mb-4">
                    <div class="section-title">
                        <i class="bi bi-cash-coin"></i> Chi phí & Đặt cọc
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Giá thuê (VNĐ/tháng)</label>
                                <div class="position-relative">
                                    <input type="text" class="form-control-custom" value="@nhaInfo?.GiaThue.ToString("N0")" readonly style="background-color: #f1f2f6; font-weight: 700; color: var(--c-primary);" />
                                    <input type="hidden" asp-for="GiaPhong" id="inputPrice" value="@nhaInfo?.GiaThue" />
                                    <i class="bi bi-lock-fill position-absolute" style="right: 15px; top: 12px; color: #999;"></i>
                                </div>
                                <small class="text-muted fst-italic mt-1 d-block"><i class="bi bi-exclamation-circle"></i> Giá cố định theo tòa nhà.</small>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Tiền cọc (VNĐ)</label>
                                <input type="text" class="form-control-custom currency-input" id="displayDeposit" placeholder="0" oninput="formatCurrency(this); updatePreview();" />
                                <input type="hidden" asp-for="TienCoc" id="realDeposit" />
                                <small class="text-muted mt-1 d-block">Số tiền khách cần cọc trước khi vào.</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="app-card mb-4">
                    <div class="section-title">
                        <i class="bi bi-stars"></i> Đặc điểm & Nội thất
                    </div>

                    <div class="row g-4 mb-4">
                        <div class="col-12">
                            <label class="form-label mb-3">Đối tượng ưu tiên</label>
                            <div class="radio-group-container">
                                <label>
                                    <input type="radio" asp-for="DoiTuong" value="Nam" class="radio-card-input" onchange="updatePreview()">
                                    <div class="radio-card-label">
                                        <i class="bi bi-gender-male"></i>
                                        <span>Nam</span>
                                    </div>
                                </label>
                                <label>
                                    <input type="radio" asp-for="DoiTuong" value="Nữ" class="radio-card-input" onchange="updatePreview()">
                                    <div class="radio-card-label">
                                        <i class="bi bi-gender-female"></i>
                                        <span>Nữ</span>
                                    </div>
                                </label>
                                <label>
                                    <input type="radio" asp-for="DoiTuong" value="" class="radio-card-input" checked onchange="updatePreview()">
                                    <div class="radio-card-label">
