@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script type="text/javascript">
        /**
     * ========================================================================
     * PRO-LEVEL ROOM MANAGEMENT ENGINE
     * VERSION: 2.0.1
     * DESCRIPTION: Quản lý logic nghiệp vụ, Live Preview và Validation.
     * ========================================================================
     */

    // --- GLOBAL CONSTANTS & CONFIGURATION ---
    const CONFIG = {
        DEBUG: true,
        MAX_FILE_SIZE: 5 * 1024 * 1024, // 5MB
        ALLOWED_EXTENSIONS: ['jpg', 'jpeg', 'png', 'webp'],
        CURRENCY_LOCALE: 'vi-VN',
        CURRENCY_SYMBOL: 'VNĐ',
        DEFAULT_IMAGE: "https://via.placeholder.com/400x300?text=Chưa+có+ảnh"
    };

    /**
     * 1. INITIALIZATION SYSTEM
     * Thiết lập các sự kiện khi trang đã sẵn sàng
     */
    document.addEventListener('DOMContentLoaded', function() {
        log('Initializing Engine...');

        // Khởi tạo Live Preview
        updatePreview();

        // Thiết lập hệ thống Drag & Drop chuyên nghiệp
        initDragAndDropSystem();

        // Thiết lập bộ lắng nghe cho các input để cập nhật Preview liên tục
        initLiveListeners();

        log('Engine is ready for operation.');
    });

    /**
     * LOGGING SYSTEM
     * Giúp kiểm soát luồng dữ liệu trên Console
     */
    function log(message, data = null) {
        if (CONFIG.DEBUG) {
            const timestamp = new Date().toLocaleTimeString();
            console.log(`%c[ROOM-ENGINE] %c${timestamp} - ${message}`, "color: #00b894; font-weight: bold", "color: #333", data || "");
        }
    }

    /**
     * DRAG AND DROP SYSTEM
     * Quản lý việc kéo thả tệp tin ảnh
     */
    function initDragAndDropSystem() {
        const dropZone = document.getElementById('dropZone');
        const fileInput = document.getElementById('fileInput');

        if (!dropZone || !fileInput) return;

        // Click để chọn file
        dropZone.addEventListener('click', () => fileInput.click());

        // Hiệu ứng khi kéo file vào vùng drop
        ['dragenter', 'dragover'].forEach(eventName => {
            dropZone.addEventListener(eventName, (e) => {
                e.preventDefault();
                e.stopPropagation();
                dropZone.classList.add('drag-over', 'animate__animated', 'animate__pulse');
            });
        });

        // Hiệu ứng khi kéo file ra khỏi vùng drop
        ['dragleave', 'drop'].forEach(eventName => {
            dropZone.addEventListener(eventName, (e) => {
                e.preventDefault();
                e.stopPropagation();
                dropZone.classList.remove('drag-over', 'animate__animated', 'animate__pulse');
            });
        });

        // Xử lý khi file được thả vào
        dropZone.addEventListener('drop', (e) => {
            const dt = e.dataTransfer;
            const files = dt.files;

            if (files.length) {
                log('File dropped via Drag & Drop', files[0].name);
                validateAndProcessFile(files[0]);
            }
        });
    }

    /**
     * LIVE LISTENERS
     * Lắng nghe mọi thay đổi trên form để cập nhật UI ngay lập tức
     */
    function initLiveListeners() {
        const inputs = [
            'inputName', 'inputFloor', 'inputArea',
            'inputCapacity', 'displayDeposit', 'GhiChu'
        ];

        inputs.forEach(id => {
            const el = document.getElementById(id);
            if (el) {
                ['input', 'change', 'blur'].forEach(evt => {
                    el.addEventListener(evt, updatePreview);
                });
            }
        });

        // Lắng nghe các checkbox dịch vụ, nội thất và giới tính
        document.querySelectorAll('input[type="checkbox"], input[type="radio"]').forEach(el => {
            el.addEventListener('change', updatePreview);
        });
    }

    /**
     * 2. FORMAT CURRENCY SYSTEM
     * Chuyển đổi số sang định dạng tiền tệ và ngược lại
     */
    function formatCurrency(input) {
        // Làm sạch dữ liệu, chỉ giữ lại số
        let value = input.value.replace(/\D/g, '');

        // Lưu giá trị số thực vào trường ẩn để gửi lên server
        const realInput = document.getElementById('realDeposit');
        if (realInput) realInput.value = value;

        // Định dạng hiển thị VNĐ
        if (value) {
            input.value = new Intl.NumberFormat(CONFIG.CURRENCY_LOCALE).format(value);
        } else {
            input.value = '';
        }

        log('Currency formatted', { raw: value, formatted: input.value });
    }

    /**
     * 3. IMAGE PROCESSING SYSTEM
     * Quản lý việc kiểm tra, hiển thị và xóa ảnh
     */
    function validateAndProcessFile(file) {
        const fileInput = document.getElementById('fileInput');

        // Kiểm tra định dạng
        const extension = file.name.split('.').pop().toLowerCase();
        if (!CONFIG.ALLOWED_EXTENSIONS.includes(extension)) {
            showToast('error', 'Định dạng file không hỗ trợ!');
            return false;
        }

        // Kiểm tra dung lượng
        if (file.size > CONFIG.MAX_FILE_SIZE) {
            showToast('error', 'Dung lượng ảnh quá lớn (Max 5MB)!');
            return false;
        }

        // Gán file cho input
        const dataTransfer = new DataTransfer();
        dataTransfer.items.add(file);
        fileInput.files = dataTransfer.files;

        previewFile();
        return true;
    }

    function previewFile() {
        const fileInput = document.getElementById('fileInput');
        const file = fileInput.files[0];
        const previewRaw = document.getElementById('imgPreviewRaw');
        const uploadContent = document.getElementById('uploadContent');
        const previewContainer = document.getElementById('previewContainer');
        const previewImageRight = document.getElementById('previewImage');

        if (file) {
            const reader = new FileReader();

            // Hiệu ứng loading giả lập
            log('Reading file stream...', file.name);

            reader.onload = function(e) {
                // Hiệu ứng mờ dần cho ảnh mới
                previewImageRight.style.opacity = '0';

                setTimeout(() => {
                    previewRaw.src = e.target.result;
                    previewImageRight.src = e.target.result;

                    uploadContent.style.display = 'none';
                    previewContainer.style.display = 'block';
                    previewContainer.classList.add('animate__animated', 'animate__fadeIn');

                    previewImageRight.style.opacity = '1';
                    log('Image preview updated successfully.');
                }, 200);
            }
            reader.readAsDataURL(file);
        }
    }

    function removeImage(event) {
        if (event) event.stopPropagation();

        log('Removing current image...');

        document.getElementById('fileInput').value = "";
        document.getElementById('uploadContent').style.display = 'block';
        document.getElementById('previewContainer').style.display = 'none';
        document.getElementById('previewImage').src = CONFIG.DEFAULT_IMAGE;

        showToast('info', 'Đã gỡ bỏ hình ảnh.');
    }

    /**
     * 4. LIVE PREVIEW ENGINE (THE CORE)
     * Bộ máy chính xử lý việc đồng bộ dữ liệu lên bản xem trước
     */
    function updatePreview() {
        try {
            // --- TRÍCH XUẤT DỮ LIỆU ---
            const data = {
                name: document.getElementById('inputName')?.value || "Tên phòng...",
                floor: document.getElementById('inputFloor')?.value || "1",
                area: document.getElementById('inputArea')?.value || "--",
                capacity: document.getElementById('inputCapacity')?.value || "--",
                price: document.getElementById('inputPrice')?.value || "0",
                deposit: document.getElementById('realDeposit')?.value || "0",
                furniture: document.querySelector('input[name="NoiThat"]:checked')?.value || "Cơ bản",
                gender: document.querySelector('input[name="DoiTuong"]:checked')?.value || "Tất cả",
                note: document.querySelector('textarea[name="GhiChu"]')?.value || ""
            };

            // --- ĐỊNH DẠNG DỮ LIỆU ---
            const fmtPrice = new Intl.NumberFormat(CONFIG.CURRENCY_LOCALE).format(data.price);
            const fmtDeposit = new Intl.NumberFormat(CONFIG.CURRENCY_LOCALE).format(data.deposit);

            // --- CẬP NHẬT DOM (BẢN XEM TRƯỚC BÊN PHẢI) ---
            const DOM = {
                name: document.getElementById('previewName'),
                price: document.getElementById('previewPrice'),
                area: document.getElementById('previewArea'),
                capacity: document.getElementById('previewCapacity'),
                floor: document.getElementById('previewFloor'),
                deposit: document.getElementById('previewDeposit'),
                status: document.getElementById('previewStatus'),
                note: document.getElementById('previewNote'),
                services: document.getElementById('previewServices')
            };

            if (DOM.name) DOM.name.innerText = data.name;
            if (DOM.price) DOM.price.innerText = fmtPrice;
            if (DOM.area) DOM.area.innerText = data.area;
            if (DOM.capacity) DOM.capacity.innerText = data.capacity;
            if (DOM.floor) DOM.floor.innerText = "Tầng " + data.floor;
            if (DOM.deposit) DOM.deposit.innerText = fmtDeposit + " " + CONFIG.CURRENCY_SYMBOL;

            // Cập nhật trạng thái Badge
            if (DOM.status) {
                DOM.status.innerText = `${data.furniture} • ${data.gender}`;
            }

            // Xử lý hiển thị danh sách dịch vụ
            if (DOM.services) {
                DOM.services.innerHTML = '';
                // Thêm tag nội thất
                const furnitureTag = document.createElement('span');
                furnitureTag.className = 'p-srv-tag';
                furnitureTag.style.cssText = "background: #eef2ff; color: #4361ee; font-weight: bold;";
                furnitureTag.innerHTML = `<i class="bi bi-box-seam me-1"></i> ${data.furniture}`;
                DOM.services.appendChild(furnitureTag);

                // Thêm các dịch vụ được chọn
                const checkedServices = document.querySelectorAll('input[name="selectedDichVu"]:checked');
                checkedServices.forEach(cb => {
                    const span = document.createElement('span');
                    span.className = 'p-srv-tag animate__animated animate__fadeIn';
                    span.innerText = cb.value;
                    DOM.services.appendChild(span);
                });
            }

            // Xử lý hiển thị ghi chú
            if (DOM.note) {
                if (data.note.trim() !== "") {
                    DOM.note.style.display = 'block';
                    DOM.note.innerText = `"${data.note}"`;
                } else {
                    DOM.note.style.display = 'none';
                }
            }
        } catch (error) {
            console.error("Critical error in Live Preview Engine:", error);
        }
    }

    /**
     * 5. VALIDATION & SUBMISSION SYSTEM
     * Quản lý việc kiểm tra dữ liệu cuối cùng và gửi form
     */
    document.getElementById('createRoomForm').addEventListener('submit', function(e) {
        e.preventDefault();
        log('Form submission initiated...');

        // Thu thập các giá trị cần validate
        const fields = {
            name: { el: document.getElementById('inputName'), label: 'Tên phòng' },
            area: { el: document.getElementById('inputArea'), label: 'Diện tích' },
            deposit: { el: document.getElementById('realDeposit'), label: 'Tiền cọc' }
        };

        // Kiểm tra trống
        for (let key in fields) {
            if (!fields[key].el.value) {
                highlightError(fields[key].el);
                Swal.fire({
                    icon: 'warning',
                    title: 'Thông tin không hợp lệ',
                    text: `Vui lòng không để trống trường: ${fields[key].label}`,
                    confirmButtonColor: '#00b894'
                });
                return;
            }
        }

        // Gom nhóm dịch vụ vào input ẩn
        processServiceSelection();

        // Hiệu ứng nộp bài chuyên nghiệp
        Swal.fire({
            title: 'Đang khởi tạo phòng...',
            html: 'Hệ thống đang đồng bộ dữ liệu và lưu trữ hình ảnh',
            allowOutsideClick: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });

        // Delay nhân văn để người dùng cảm thấy hệ thống đang làm việc
        setTimeout(() => {
            log('Submitting form now.');
            this.submit();
        }, 1200);
    });

    /**
     * UTILITY FUNCTIONS
     * Các hàm bổ trợ quy mô nhỏ
     */
    function processServiceSelection() {
        const selected = [];
        document.querySelectorAll('input[name="selectedDichVu"]:checked').forEach(el => {
            selected.push(el.value);
        });

        const oldInput = document.querySelector('input[name="DichVu"]');
        if (oldInput) oldInput.remove();

        const hiddenInput = document.createElement("input");
        hiddenInput.type = "hidden";
        hiddenInput.name = "DichVu";
        hiddenInput.value = selected.join(", ");
        document.getElementById('createRoomForm').appendChild(hiddenInput);

        log('Services combined', hiddenInput.value);
    }

    function showToast(icon, title) {
        const Toast = Swal.mixin({
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true
        });
        Toast.fire({ icon, title });
    }

    function highlightError(element) {
        element.classList.add('is-invalid', 'animate__animated', 'animate__shakeX');
        setTimeout(() => {
            element.classList.remove('animate__shakeX');
        }, 1000);
    }
</script>
