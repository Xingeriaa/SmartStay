@model do_an_tot_nghiep.Models.KhachThue
@{
    ViewData["Title"] = "Thêm Khách Thuê Mới";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/animate.css@4.1.1/animate.min.css">

<style>
    :root {
        /* --- MÀU CHỦ ĐẠO DUY NHẤT --- */
        --theme-gradient: var(--brand-gradient);
        --theme-color-primary: var(--brand-600);
        --theme-color-secondary: var(--accent-500);
        --glass-bg: rgba(255, 255, 255, 0.95);
    }

    body {
        background-color: #f4f7f6;
        font-family: 'Inter', 'Segoe UI', sans-serif;
    }

    /* Main Card Styling */
    .main-card {
        border: none;
        border-radius: 25px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.05);
        background: white;
        overflow: hidden;
    }

    .card-header-custom {
        background: var(--theme-gradient);
        padding: 2rem;
        position: relative;
        overflow: hidden;
    }

        .card-header-custom::before {
            content: "";
            position: absolute;
            top: -50px;
            right: -50px;
            width: 150px;
            height: 150px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
        }

    .form-title {
        color: white;
        font-weight: 700;
        margin: 0;
        font-size: 1.5rem;
    }

    .form-subtitle {
        color: rgba(255,255,255,0.8);
        font-size: 0.9rem;
    }

    /* Input Styling */
    .form-label {
        font-weight: 600;
        color: #444;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

        .form-label i {
            color: var(--theme-color-primary);
            width: 20px;
        }

    .form-control-modern {
        border: 2px solid #eef2f7;
        border-radius: 12px;
        padding: 12px 15px;
        font-size: 0.95rem;
        transition: all 0.3s;
        background-color: #fcfcfc;
    }

        .form-control-modern:focus {
            border-color: var(--theme-color-secondary);
            box-shadow: 0 0 0 4px rgba(0, 184, 148, 0.12);
            background-color: white;
            outline: none;
        }

    /* Image Upload Area */
    .upload-box {
        border: 2px dashed #cbd5e0;
        border-radius: 15px;
        padding: 20px;
        text-align: center;
        background: #f8fafc;
        cursor: pointer;
        transition: all 0.3s;
        position: relative;
    }

        .upload-box:hover {
            border-color: var(--theme-color-primary);
            background: #f0f4ff;
        }

    .preview-image {
        max-width: 150px;
        max-height: 150px;
        border-radius: 10px;
        margin-top: 10px;
        display: none;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        border: 2px solid white;
    }

    /* Buttons */
    .btn-grad {
        padding: 12px 30px;
        border-radius: 12px;
        font-weight: 600;
        border: none;
        transition: 0.3s;
        background: var(--theme-gradient);
        color: white;
        box-shadow: 0 4px 15px rgba(0, 184, 148, 0.3);
    }

        .btn-grad:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0, 184, 148, 0.35);
            color: white;
        }

    .btn-soft {
        padding: 12px 25px;
        border-radius: 12px;
        font-weight: 600;
        background: #eef2f7;
        color: #5e6e82;
        border: none;
        transition: 0.3s;
    }

        .btn-soft:hover {
            background: #dfe6ed;
            color: #2d3748;
        }
</style>

<div class="container py-5 animate__animated animate__fadeInUp">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
            <div class="card main-card">
                <div class="card-header-custom">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <span style="background: rgba(255,255,255,0.2); padding: 10px; border-radius: 12px; display: inline-block;">
                                <i class="fas fa-user-plus fa-lg text-white"></i>
                            </span>
                        </div>
                        <div>
                            <h4 class="form-title">Thông Tin Khách Thuê</h4>
                            <p class="form-subtitle mb-0">Nhập đầy đủ thông tin để tạo hồ sơ khách hàng mới</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="alert alert-danger border-0 bg-soft-danger mb-4" style="display:none;"></div>

                        <h6 class="text-uppercase fw-bold text-muted mb-3 small letter-spacing-1">
                            <i class="fas fa-id-card me-2"></i>Thông tin cá nhân
                        </h6>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="HoTen" class="form-label">Họ và tên <span class="text-danger">*</span></label>
                                <input asp-for="HoTen" class="form-control-modern" placeholder="VD: Nguyễn Văn A" />
                                <span asp-validation-for="HoTen" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NgaySinh" class="form-label">Ngày sinh</label>
                                <input asp-for="NgaySinh" type="date" class="form-control-modern" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="SoCCCD" class="form-label">Số CCCD/CMND <span class="text-danger">*</span></label>
                                <input asp-for="SoCCCD" class="form-control-modern" placeholder="12 số căn cước" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NoiCap" class="form-label">Nơi cấp</label>
                                <input asp-for="NoiCap" class="form-control-modern" placeholder="Cục CS QLHC..." />
                            </div>

                            <div class="col-12">
                                <label asp-for="NoiSinh" class="form-label">Quê quán (Nơi sinh)</label>
                                <input asp-for="NoiSinh" class="form-control-modern" placeholder="Tỉnh/Thành phố..." />
                            </div>
                        </div>

                        <hr class="my-4 text-muted opacity-25">

                        <h6 class="text-uppercase fw-bold text-muted mb-3 small letter-spacing-1">
                            <i class="fas fa-address-book me-2"></i>Liên hệ & Hợp đồng
                        </h6>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="SoDienThoai1" class="form-label">Số điện thoại chính <span class="text-danger">*</span></label>
                                <input asp-for="SoDienThoai1" class="form-control-modern" placeholder="09xxxxxxx" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SoDienThoai2" class="form-label">Số điện thoại phụ</label>
                                <input asp-for="SoDienThoai2" class="form-control-modern" placeholder="Không bắt buộc" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Email liên hệ</label>
                                <input asp-for="Email" type="email" class="form-control-modern" placeholder="example@email.com" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SoTienCoc" class="form-label">Tiền cọc (VNĐ)</label>
                                <div class="input-group">
                                    <input asp-for="SoTienCoc" type="number" class="form-control form-control-modern rounded-end-0" placeholder="0" />
                                    <span class="input-group-text bg-light border-0 fw-bold text-muted" style="border: 2px solid #eef2f7; border-left: 0; border-radius: 0 12px 12px 0;">VNĐ</span>
                                </div>
                            </div>

                            <div class="col-12">
                                <label asp-for="DiaChiThuongTru" class="form-label">Địa chỉ thường trú</label>
                                <textarea asp-for="DiaChiThuongTru" class="form-control-modern" rows="2" placeholder="Số nhà, đường, phường/xã..."></textarea>
                            </div>
                        </div>

                        <hr class="my-4 text-muted opacity-25">

                        <div class="row">
                            <div class="col-md-12">
                                <label class="form-label">Ảnh đại diện</label>
                                <div class="upload-box" onclick="document.getElementById('fileInput').click()">
                                    <input type="file" name="fHinhAnh" id="fileInput" class="d-none" accept="image/*" onchange="previewFile()" />
                                    <div id="uploadPlaceholder">
                                        <i class="fas fa-cloud-upload-alt fa-3x mb-3" style="color: #cbd5e0;"></i>
                                        <p class="mb-1 fw-bold text-dark">Nhấn để tải ảnh lên</p>
                                        <p class="text-muted small mb-0">Hỗ trợ: JPG, PNG, JPEG</p>
                                    </div>
                                    <img id="imgPreview" class="preview-image mx-auto" src="#" alt="Xem trước ảnh" />
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-3 mt-5">
                            <a asp-action="Index" class="btn btn-soft">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-grad">
                                <i class="fas fa-save me-2"></i>Lưu hồ sơ
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Script xem trước ảnh khi upload
        function previewFile() {
            var preview = document.getElementById('imgPreview');
            var file = document.getElementById('fileInput').files[0];
            var reader = new FileReader();
            var placeholder = document.getElementById('uploadPlaceholder');

            reader.onloadend = function () {
                preview.src = reader.result;
                preview.style.display = 'block';
                placeholder.style.display = 'none'; // Ẩn hướng dẫn khi đã có ảnh
            }

            if (file) {
                reader.readAsDataURL(file);
            } else {
                preview.src = "";
                preview.style.display = 'none';
                placeholder.style.display = 'block';
            }
        }
    </script>
}