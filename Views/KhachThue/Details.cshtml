@model do_an_tot_nghiep.ViewModels.KhachThueFormViewModel

@{
    ViewData["Title"] = "Hồ Sơ Cư Dân";
}

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-body text-center">
                <img src="~/img/undraw_profile.svg" alt="Avatar" class="img-fluid rounded-circle mb-3" style="width: 150px;" />
                <h5 class="font-weight-bold text-dark">@Model.HoTen</h5>
                <p class="text-muted mb-1">CCCD: <strong>@Model.SoCCCD</strong></p>
                <span class="badge @(Model.Status == "Active" ? "bg-success" : "bg-secondary")">@Model.Status</span>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between">Giới tính: <span>@(Model.Gender ?? "N/A")</span></li>
                <li class="list-group-item d-flex justify-content-between">Ngày sinh: <span>@Model.NgaySinh.ToString("dd/MM/yyyy")</span></li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Cập nhật hồ sơ
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Sửa</a>
                </li>
            </ul>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header py-3 bg-white">
                <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-info-circle"></i> Chi Tiết Liên Hệ & Thường Trú</h6>
            </div>
            <div class="card-body">
                <div class="row mb-3 border-bottom pb-2">
                    <div class="col-sm-4 font-weight-bold text-secondary">SĐT Liên Hệ Chính:</div>
                    <div class="col-sm-8 font-weight-bold text-dark"><i class="fas fa-phone-alt me-2 text-success"></i> @Model.SoDienThoai1</div>
                </div>
                <div class="row mb-3 border-bottom pb-2">
                    <div class="col-sm-4 font-weight-bold text-secondary">SĐT Phụ Zalo:</div>
                    <div class="col-sm-8">@Model.SoDienThoai2</div>
                </div>
                <div class="row mb-3 border-bottom pb-2">
                    <div class="col-sm-4 font-weight-bold text-secondary">Email:</div>
                    <div class="col-sm-8">@Model.Email</div>
                </div>
                <div class="row mb-3 border-bottom pb-2">
                    <div class="col-sm-4 font-weight-bold text-secondary">Địa Chỉ Thường Trú:</div>
                    <div class="col-sm-8">@Model.DiaChiThuongTru</div>
                </div>
                <div class="row mb-3 border-bottom pb-2">
                    <div class="col-sm-4 font-weight-bold text-secondary">Nơi Sinh:</div>
                    <div class="col-sm-8">@Model.NoiSinh</div>
                </div>
                
                <div class="text-end mt-4">
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay Lại Danh Sách</a>
                </div>
            </div>
        </div>
    </div>
</div>