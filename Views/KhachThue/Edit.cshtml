@model do_an_tot_nghiep.ViewModels.KhachThueFormViewModel

@{
    ViewData["Title"] = "Cập Nhật Cư Dân";
}

<div class="card shadow mb-4 col-md-10 mx-auto border-left-warning">
    <div class="card-header py-3 bg-white">
        <h6 class="m-0 font-weight-bold text-warning"><i class="fas fa-user-edit"></i> Chỉnh Sửa Hồ Sơ: @Model.HoTen</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <partial name="_Form" model="Model" />
            
            <div class="mt-4 form-group text-end bg-light p-3 rounded">
                <a asp-action="Index" class="btn btn-secondary me-2"><i class="fas fa-times"></i> Hủy Bỏ</a>
                <button type="submit" class="btn btn-warning text-dark"><i class="fas fa-save"></i> Cập Nhật Lại</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}