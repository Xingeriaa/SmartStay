@model do_an_tot_nghiep.ViewModels.HopDongFormViewModel

@{
    ViewData["Title"] = "Lập Hợp Đồng Mới";
}

<div class="container-fluid px-0 py-2">
    @* Page Header *@
    <div class="d-flex flex-wrap justify-content-between align-items-end mb-4 gap-3">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-2">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index" class="text-muted text-decoration-none"><i class="fas fa-home me-1"></i>Trang chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-muted text-decoration-none">Hợp đồng</a></li>
                    <li class="breadcrumb-item active fw-medium">Lập mới</li>
                </ol>
            </nav>
            <h1 class="fw-bold mb-1" style="font-size:1.75rem; letter-spacing: -0.5px;">Lập hợp đồng mới</h1>
            <p class="text-secondary mb-0">Thiết lập hợp đồng và ghi nhận khách thuê vào phòng</p>
        </div>
        <a asp-action="Index" class="btn btn-light border shadow-sm rounded-pill px-4">
            <i class="fas fa-arrow-left me-2"></i> Quay lại danh sách
        </a>
    </div>

    @* Main Form Card *@
    <div class="row justify-content-center">
        <div class="col-xl-9 col-lg-10">
            <div class="card border-0 shadow-sm rounded-4 animate-fade-up">

                @* Card Header *@
                <div class="card-header bg-white border-bottom p-4">
                    <div class="d-flex align-items-center gap-3">
                        <div class="bg-success bg-opacity-10 p-3 rounded-4 d-flex align-items-center justify-content-center" style="width: 54px; height: 54px;">
                            <i class="fas fa-file-signature text-success fs-4"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold mb-1 text-dark">Tạo lập Hợp Đồng Khách Thuê</h5>
                            <small class="text-secondary">Điền đầy đủ thông tin để hệ thống thiết lập hợp đồng</small>
                        </div>
                    </div>
                </div>

                @* Card Body *@
                <div class="card-body p-4 p-md-5">

                    @* Alert Automations Trigger *@
                    <div class="alert bg-info bg-opacity-10 border-start border-info border-4 text-dark mb-4 p-3 rounded-end-3 shadow-sm d-flex gap-3 align-items-start">
                        <i class="fas fa-cogs fs-5 text-info mt-1"></i>
                        <div>
                            <strong class="d-block mb-1 text-info text-uppercase small" style="letter-spacing: 0.5px;">Automations Trigger:</strong>
                            <ul class="mb-0 small text-secondary" style="line-height: 1.6; padding-left: 1.2rem;">
                                <li>Phòng sẽ lập tức chuyển sang trạng thái <strong class="text-dark">Occupied (Đang Thuê)</strong>.</li>
                                <li>Hệ thống <strong class="text-dark">Tự động Snapshot (chốt giá)</strong> Tiền Thuê & Dịch Vụ tại thời điểm này. Hóa đơn sẽ tham chiếu lịch sử giá đó.</li>
                            </ul>
                        </div>
                    </div>

                    <form asp-action="Create" method="post">

                        @* Form fields from partial view *@
                        <div class="form-wrapper">
                            <partial name="_Form" model="Model" />
                        </div>

                        <hr class="my-4 text-muted opacity-25">

                        @* Action Buttons *@
                        <div class="d-flex flex-wrap justify-content-end align-items-center gap-3 pt-2">
                            <a asp-action="Index" class="btn btn-light border shadow-sm rounded-pill px-4 py-2 fw-medium text-secondary hover-dark">
                                <i class="fas fa-times me-2"></i> Hủy giao dịch
                            </a>
                            <button type="submit" class="btn btn-success shadow-sm rounded-pill px-5 py-2 fw-bold text-white">
                                <i class="fas fa-check-circle me-2"></i> Đồng Ý Phát Hành Ký Kết
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2-multiple').select2({
                placeholder: "Chọn những người ở. Người đầu tiên là ĐẠI DIỆN HỢP ĐỒNG.",
                allowClear: true,
                width: '100%'
            });
        });
    </script>

    <style>
        /* CSS cho thẻ Form chung */
        .form-wrapper .form-control,
        .form-wrapper .form-select {
            box-shadow: none !important;
            border-color: #dee2e6;
            padding: 0.6rem 0.75rem;
            border-radius: 0.5rem;
        }
            /* Hiệu ứng viền xanh Success khi click vào ô nhập */
            .form-wrapper .form-control:focus,
            .form-wrapper .form-select:focus {
                border-color: #198754;
                box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.25) !important;
            }

        .form-wrapper label {
            font-weight: 500;
            color: #495057;
            margin-bottom: 0.5rem;
        }

        .hover-dark:hover {
            color: #212529 !important;
            background-color: #f8f9fa !important;
        }

        /* --- Custom giao diện Select2 cho khớp với Bootstrap 5 --- */
        .select2-container--default .select2-selection--multiple {
            border: 1px solid #dee2e6;
            border-radius: 0.5rem;
            padding: 0.25rem 0.4rem;
            min-height: 42px;
            transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
        }

        .select2-container--default.select2-container--focus .select2-selection--multiple {
            border-color: #198754;
            box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.25);
        }

        .select2-container--default .select2-selection--multiple .select2-selection__choice {
            background-color: #e8f5e9;
            border: 1px solid #c3e6cb;
            color: #155724;
            border-radius: 0.25rem;
            padding: 0.15rem 0.5rem;
            margin-top: 5px;
            font-size: 0.875rem;
        }

        .select2-container--default .select2-selection--multiple .select2-selection__choice__remove {
            color: #155724;
            margin-right: 5px;
            border-right: 1px solid #c3e6cb;
            padding-right: 4px;
        }

            .select2-container--default .select2-selection--multiple .select2-selection__choice__remove:hover {
                background-color: transparent;
                color: #dc3545;
            }
    </style>
}