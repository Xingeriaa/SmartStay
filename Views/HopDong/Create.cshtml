@model do_an_tot_nghiep.ViewModels.HopDongFormViewModel

@{
    ViewData["Title"] = "Lập Hợp Đồng Mới";
}

<div class="card shadow mb-4 col-md-10 mx-auto border-left-success">
    <div class="card-header py-3 bg-white">
        <h6 class="m-0 font-weight-bold text-success"><i class="fas fa-plus-square"></i> Tạo lập Hợp Đồng Khách Thuê</h6>
    </div>
    <div class="card-body">
        
        <div class="alert alert-info border-start border-info border-4">
            <h6 class="fw-bold"><i class="fas fa-cogs"></i> Automations Trigger:</h6>
            <ul class="mb-0 small">
                <li>Phòng sẽ lập tức chuyển sang trạng thái <strong>Occupied (Đang Thuê)</strong>.</li>
                <li>Hệ thống <strong>Tự động Snapshot (chốt giá)</strong> Tiền Thuê & Dịch Vụ tại thời điểm này. Hóa đơn sẽ tham chiếu lịch sử giá đó.</li>
            </ul>
        </div>

        <form asp-action="Create" method="post">
            <partial name="_Form" model="Model" />
            
            <div class="mt-4 form-group text-end bg-light p-3 rounded">
                <a asp-action="Index" class="btn btn-secondary me-2"><i class="fas fa-times"></i> Hủy Giao Dịch</a>
                <button type="submit" class="btn btn-success fw-bold text-white"><i class="fas fa-signature"></i> Đồng Ý Phát Hành Ký Kết</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <!-- Make Multiple Select look better -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2-multiple').select2({
                placeholder: "Chọn những người ở. Người đầu tiên là ĐẠI DIỆN HỢP ĐỒNG.",
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}