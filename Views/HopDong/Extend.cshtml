@model do_an_tot_nghiep.ViewModels.ContractExtensionViewModel

@{
    ViewData["Title"] = "Gia Hạn Hợp Đồng";
}

<div class="card shadow mb-4 col-md-8 mx-auto border-left-info border-info">
    <div class="card-header py-3 bg-white text-center">
        <h5 class="m-0 font-weight-bold text-info"><i class="fas fa-file-contract"></i> Phụ Lục Gia Hạn Hợp Đồng</h5>
        <span class="badge bg-secondary px-3 py-2 mt-2">Mã HĐ: @Model.ContractCode</span>
    </div>
    <div class="card-body">
        
        <div class="alert alert-warning border-start border-warning border-4 small">
            <strong><i class="fas fa-info-circle"></i> Nguyên tắc Hệ thống Kế toán:</strong> 
            Không chỉnh sửa trực tiếp Hợp đồng gốc theo quy định. Nghiệp vụ này sẽ tạo riêng 1 bản Phụ Lục (ContractExtension) để ghi nhận thay đổi về Thời hạn và Giá thuê Gốc dùng cho các chu kỳ tính báo cáo tiếp theo.
        </div>

        <form asp-action="Extend" method="post">
            <input type="hidden" asp-for="ContractId" />
            <input type="hidden" asp-for="ContractCode" />
            <input type="hidden" asp-for="OldEndDate" />
            <input type="hidden" asp-for="OldRentPrice" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 alert alert-danger p-2"></div>

            <!-- Current States -->
            <div class="row mb-4 bg-light p-3 rounded">
                <div class="col-md-6">
                    <label class="form-label text-muted fw-bold">Ngày Kết Thúc (Cũ)</label>
                    <div class="form-control bg-white" readonly>@Model.OldEndDate.ToString("dd/MM/yyyy")</div>
                </div>
                <div class="col-md-6">
                    <label class="form-label text-muted fw-bold">Giá Thuê Gốc (Cũ)</label>
                    <div class="form-control bg-white text-success fw-bold" readonly>@Model.OldRentPrice.ToString("N0") VNĐ</div>
                </div>
            </div>

            <!-- New Extensions States -->
            <h6 class="text-info fw-bold mb-3 border-bottom border-info pb-2"><i class="fas fa-edit"></i> Thông Số Gia Hạn</h6>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="NewEndDate" class="form-label fw-bold text-dark"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-info text-white"><i class="fas fa-calendar-plus"></i></span>
                        <input asp-for="NewEndDate" class="form-control font-weight-bold" />
                    </div>
                    <span asp-validation-for="NewEndDate" class="text-danger"></span>
                    <small class="text-muted d-block mt-1">Bắt buộc &gt; Ngày Kết Thúc Cũ</small>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="NewRentPrice" class="form-label fw-bold text-dark"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-warning text-dark fw-bold">VNĐ</span>
                        <input asp-for="NewRentPrice" class="form-control text-success fw-bold" type="number" />
                    </div>
                    <span asp-validation-for="NewRentPrice" class="text-danger"></span>
                    <small class="text-muted d-block mt-1">Bỏ trống (hoặc giữ nguyên) nếu giá không đổi</small>
                </div>
            </div>
            
            <div class="mt-4 text-end bg-light p-3 rounded">
                <a asp-action="Index" class="btn btn-secondary me-2"><i class="fas fa-times"></i> Hủy Bỏ</a>
                <button type="submit" class="btn btn-info fw-bold text-white"><i class="fas fa-check-circle"></i> Đồng Ý Ban Hành Phụ Lục</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}