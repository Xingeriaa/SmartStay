@model IEnumerable<HopDong>
@{
    ViewData["Title"] = "Quản lý Hợp đồng";
    // Helper function để lấy chữ cái đầu
    string GetInitials(string name) => !string.IsNullOrEmpty(name) ? name.Substring(0, 1).ToUpper() : "?";
}



<div class="container-fluid py-4">
    <div class="card main-card">
        <div class="card-header-custom">
            <div class="row align-items-center">
                <div class="col-md-5">
                    <h4 class="mb-0 text-gradient">
                        <i class="fa fa-file-contract me-2"></i>Danh sách Hợp đồng
                    </h4>
                    <small class="text-muted">Quản lý @Model.Count() bản ghi hiện có</small>
                </div>
                <div class="col-md-7">
                    <div class="d-flex justify-content-md-end gap-3 mt-3 mt-md-0">
                        <div class="search-group d-flex align-items-center">
                            <i class="fa fa-search text-muted"></i>
                            <input type="text" id="searchInput" placeholder="Tìm kiếm hợp đồng...">
                        </div>
                        <a asp-action="Create" class="btn btn-grad text-nowrap">
                            <i class="fa fa-plus me-1"></i> Tạo mới
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                @if (Model != null && Model.Any())
                {
                    <table class="table custom-table mb-0" id="contractTable">
                        <thead>
                            <tr>
                                <th style="width: 50px;">#</th>
                                <th>Thông tin Phòng</th>
                                <th>Chủ Hợp đồng</th>
                                <th>Thời hạn</th>
                                <th class="text-center">Trạng thái</th>
                                <th class="text-end" style="width: 100px;">Tác vụ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var chuHopDong = item.HopDongKhachThues?.FirstOrDefault(x => x.VaiTro == "CHU_HOP_DONG")?.KhachThue?.HoTen ?? "Chưa cập nhật";
                                var tenNha = item.PhongTro?.NhaTro?.TenNhaTro ?? "-";
                                var tenPhong = item.PhongTro?.TenPhong ?? "-";
                                var isExpired = item.NgayKetThuc.HasValue && item.NgayKetThuc.Value < DateTime.Now;
                                var badgeClass = isExpired ? "badge-soft badge-soft-secondary" : "badge-soft badge-soft-brand";

                                <tr>
                                    <td><span class="text-muted">@item.Id</span></td>

                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold text-dark">@tenPhong</span>
                                            <span class="small text-muted"><i class="fa fa-building me-1"></i>@tenNha</span>
                                        </div>
                                    </td>

                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle">@GetInitials(chuHopDong)</div>
                                            <div>
                                                <div class="fw-bold">@chuHopDong</div>
                                                <div class="small text-muted" style="font-size: 0.75rem;">Đại diện</div>
                                            </div>
                                        </div>
                                    </td>

                                    <td>
                                        <div class="d-flex flex-column small">
                                            <span><i class="fa fa-calendar-check text-success me-1"></i> @item.NgayBatDau.ToString("dd/MM/yyyy")</span>
                                            <span class="mt-1"><i class="fa fa-calendar-times text-danger me-1"></i> @(item.NgayKetThuc.HasValue? item.NgayKetThuc.Value.ToString("dd/MM/yyyy") : "Vô thời hạn")</span>
                                        </div>
                                    </td>

                                    <td class="text-center">
                                        <span class="@badgeClass">
                                            @item.TrangThai
                                        </span>
                                    </td>

                                    <td class="text-end">
                                        <div class="dropdown">
                                            <button class="btn btn-icon-action" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="fa fa-ellipsis-v"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg">
                                                <li>
                                                    <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">
                                                        <i class="fa fa-eye me-2"></i>Xem chi tiết
                                                    </a>
                                                </li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">
                                                        <i class="fa fa-edit me-2"></i>Chỉnh sửa
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" asp-action="Extend" asp-route-id="@item.Id">
                                                        <i class="fa fa-clock me-2"></i>Gia hạn
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item text-danger" asp-action="Terminate" asp-route-id="@item.Id">
                                                        <i class="fa fa-ban me-2 text-danger"></i>Thanh lý
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="mb-3">
                            <i class="fa fa-folder-open fa-3x text-muted"></i>
                        </div>
                        <h5 class="text-muted">Chưa có hợp đồng nào</h5>
                        <p class="text-muted small">Hãy tạo hợp đồng mới để bắt đầu quản lý.</p>
                        <a asp-action="Create" class="btn btn-sm btn-outline-brand rounded-pill px-4">Tạo ngay</a>
                    </div>
                }
            </div>
        </div>

        @if (Model != null && Model.Count() > 10)
        {
            <div class="card-footer bg-white border-top-0 py-3">
                <nav>
                    <ul class="pagination justify-content-center mb-0 pagination-sm">
                        <li class="page-item disabled"><a class="page-link" href="#">Trước</a></li>
                        <li class="page-item active" style="z-index: 0;"><a class="page-link border-0" href="#">1</a></li>
                        <li class="page-item"><a class="page-link text-dark" href="#">2</a></li>
                        <li class="page-item"><a class="page-link text-dark" href="#">Sau</a></li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Simple Client-side Search Script
        document.getElementById('searchInput').addEventListener('keyup', function() {
            var input = this.value.toLowerCase();
            var rows = document.querySelectorAll('#contractTable tbody tr');

            rows.forEach(function(row) {
                var text = row.innerText.toLowerCase();
                row.style.display = text.includes(input) ? '' : 'none';
            });
        });

        // Kích hoạt tooltip nếu dùng bootstrap 5
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
          return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}