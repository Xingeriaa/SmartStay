@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký tài khoản</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        /* --- Định nghĩa Animation --- */
        /* Hiệu ứng trượt xuống khi xuất hiện */
        @@keyframes slideInDown {
            from

        {
            transform: translate3d(0, -30px, 0);
            opacity: 0;
        }

        to {
            transform: translate3d(0, 0, 0);
            opacity: 1;
        }

        }

        /* Hiệu ứng nổi lên xuống nhẹ nhàng (giữ lại góc xoay -10deg cũ) */
        @@keyframes floater {
            0%

        {
            transform: translateY(0px) rotate(-10deg);
        }

        50% {
            transform: translateY(-8px) rotate(-10deg);
        }

        100% {
            transform: translateY(0px) rotate(-10deg);
        }

        }

        body {
            background: linear-gradient(135deg, #00b894 0%, #0984e3 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter', 'Segoe UI', sans-serif;
            margin: 0;
        }

        .register-card {
            background: rgba(255, 255, 255, 0.98);
            border: none;
            border-radius: 24px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
            padding: 10px;
            /* Thêm animation xuất hiện */
            animation: slideInDown 0.8s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        .register-icon {
            width: 70px;
            height: 70px;
            background: linear-gradient(135deg, #00b894 0%, #0984e3 100%);
            color: white;
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8rem;
            margin: 0 auto 1rem;
            /* transform: rotate(-10deg);  <- Đã đưa vào keyframe floater */
            box-shadow: 0 10px 20px rgba(0, 184, 148, 0.28);
            /* Thêm animation nổi */
            animation: floater 3s ease-in-out infinite;
        }

        .form-label {
            font-weight: 600;
            color: #495057;
            font-size: 0.85rem;
            margin-left: 5px;
        }

        .input-group {
            background: #f1f3f5;
            border: 2px solid transparent;
            border-radius: 12px;
            /* Làm mượt chuyển động */
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

            .input-group:focus-within {
                border-color: #00b894;
                background: #fff;
                box-shadow: 0 0 0 4px rgba(0, 184, 148, 0.12);
                /* Nhẹ nhàng nổi lên khi focus */
                transform: translateY(-2px);
            }

        .input-group-text {
            background: transparent;
            border: none;
            color: #00a383;
            padding-left: 1rem;
            transition: color 0.3s;
        }

        /* Đổi màu icon khi focus */
        .input-group:focus-within .input-group-text {
            color: #0984e3;
        }

        .form-control {
            background: transparent;
            border: none;
            padding: 0.8rem 0.75rem;
            font-size: 0.95rem;
        }

            .form-control:focus {
                box-shadow: none;
                background: transparent;
            }

        .btn-register {
            background: linear-gradient(135deg, #00b894 0%, #0984e3 100%);
            border: none;
            color: white;
            padding: 0.9rem;
            font-weight: 600;
            border-radius: 12px;
            letter-spacing: 0.5px;
            /* Làm mượt chuyển động hover */
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
            margin-top: 1rem;
        }

            .btn-register:hover {
                /* Đổi sang translateY để đồng bộ với trang login */
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(0, 184, 148, 0.4);
                color: white;
            }

        .login-link {
            color: #0984e3;
            text-decoration: none;
            font-weight: 700;
            transition: all 0.2s;
        }

            .login-link:hover {
                text-decoration: underline;
                color: #00b894;
            }

        /* CSS cho phần chọn role */
        .role-selector .form-check-input:checked {
            background-color: #00a383;
            border-color: #00a383;
        }

        .role-selector {
            background: #f8f9fa;
            padding: 10px;
            border-radius: 12px;
            margin-bottom: 20px;
            border: 1px solid #e9ecef; /* Thêm viền nhẹ */
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-4">
                <div class="card register-card">
                    <div class="card-header border-0 bg-transparent text-center pt-4">
                        <div class="register-icon">
                            <i class="bi bi-person-plus-fill"></i>
                        </div>
                        <h3 class="fw-bold text-dark mb-1">Tạo tài khoản</h3>
                    </div>

                    <div class="card-body px-4">
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger py-2 small mb-3 border-0 shadow-sm">
                                <i class="bi bi-exclamation-circle-fill me-2"></i> @ViewBag.Error
                            </div>
                        }

                        <form method="post" action="/Account/Register">

                            <div class="role-selector">
                                <label class="form-label d-block mb-2 fw-bold">Bạn đăng ký với tư cách:</label>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input shadow-none" type="radio" name="role" id="roleChuTro" value="ChuTro" checked onchange="updateButtonText()">
                                    <label class="form-check-label" for="roleChuTro">Chủ Trọ</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input shadow-none" type="radio" name="role" id="roleNguoiThue" value="NguoiThue" onchange="updateButtonText()">
                                    <label class="form-check-label" for="roleNguoiThue">Người Thuê</label>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    <input name="username" class="form-control" placeholder="Tên đăng nhập" required />
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <input name="email" type="email" class="form-control" placeholder="Email" required />
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-key"></i></span>
                                    <input name="password" type="password" class="form-control" placeholder="Mật khẩu" required />
                                </div>
                            </div>

                            <div class="mb-4">
                                <div class="d-grid">
                                    <button class="btn btn-register shadow-sm" type="submit" id="btnSubmit">Đăng ký ngay</button>
                                </div>
                            </div>

                        </form>

                        <div class="text-center">
                            <a href="/Account/Login" class="login-link small">Đã có tài khoản? Đăng nhập</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Hàm thay đổi chữ trên nút bấm cho sinh động
        function updateButtonText() {
            const btn = document.getElementById('btnSubmit');
            const isChuTro = document.getElementById('roleChuTro').checked;
            // Thêm hiệu ứng mờ nhẹ khi đổi text
            btn.style.opacity = 0.5;
            setTimeout(() => {
                if(isChuTro) {
                    btn.innerText = "Đăng ký làm Chủ Trọ";
                } else {
                    btn.innerText = "Đăng ký tìm phòng thuê";
                }
                btn.style.opacity = 1;
            }, 200);
        }
        // Chạy lần đầu
        updateButtonText();
    </script>
</body>
</html>