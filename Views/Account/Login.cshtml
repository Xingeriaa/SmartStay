@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập hệ thống</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #00b894 0%, #0984e3 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter', 'Segoe UI', Roboto, sans-serif;
            margin: 0;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.95);
            border: none;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

        .login-logo {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #00b894 0%, #0984e3 100%);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            margin: 0 auto 1rem;
            box-shadow: 0 4px 15px rgba(118, 75, 162, 0.3);
        }

        .form-label {
            font-weight: 500;
            color: #444;
            font-size: 0.9rem;
        }

        .input-group {
            border-radius: 12px;
            overflow: hidden;
            background: #f8f9fa;
            border: 1px solid #e0e0e0;
            transition: all 0.2s;
        }

            .input-group:focus-within {
                border-color: #00b894;
                box-shadow: 0 0 0 4px rgba(0, 184, 148, 0.12);
                background: #fff;
            }

        .input-group-text {
            background: transparent;
            border: none;
            color: #00a383;
            padding-left: 1.2rem;
        }

        .form-control {
            background: transparent;
            border: none;
            padding: 0.8rem 1rem 0.8rem 0.5rem;
            font-size: 0.95rem;
        }

            .form-control:focus {
                box-shadow: none;
            }

        .form-check-input:checked {
            background-color: #00a383;
            border-color: #00a383;
        }

        .btn-login {
            background: linear-gradient(135deg, #00b894 0%, #0984e3 100%);
            border: none;
            color: white;
            padding: 0.8rem;
            font-weight: 600;
            border-radius: 12px;
            margin-top: 1rem;
            transition: all 0.2s;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 184, 148, 0.35);
                color: #fff;
            }

        .register-link {
            color: #0984e3;
            text-decoration: none;
            font-weight: 600;
        }

            .register-link:hover {
                text-decoration: underline;
            }

        @@media (max-width: 480px) {
            .container {
                padding: 20px;
            }
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                <div class="card login-card">
                    <div class="card-header border-0 bg-transparent text-center pt-4">
                        <div class="login-logo">
                            <i class="bi bi-person-lock"></i>
                        </div>
                        <h3 class="fw-bold text-dark">Xin chào!</h3>
                        <p class="text-muted">Đăng nhập để tiếp tục</p>
                    </div>
                    <div class="card-body px-4 pb-4">
                        <form method="post">
                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger py-2 small mb-3 border-0 shadow-sm">
                                    <i class="bi bi-exclamation-circle-fill me-2"></i> @ViewBag.Error
                                </div>
                            }

                            <div class="mb-3">
                                <label for="username" class="form-label">Tên đăng nhập</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                                    <input id="username" name="username" class="form-control"
                                           placeholder="Nhập tên đăng nhập"
                                           value="@ViewBag.SavedUsername" required />
                                </div>
                            </div>

                            <div class="mb-4">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <label for="password" class="form-label mb-0">Mật khẩu</label>
                                    <a href="#" class="small text-muted text-decoration-none">Quên mật khẩu?</a>
                                </div>
                                <div class="input-group mb-2">
                                    <span class="input-group-text"><i class="bi bi-shield-lock-fill"></i></span>
                                    <input id="password" name="password" type="password"
                                           class="form-control" placeholder="••••••••" required />
                                </div>

                                <div class="form-check">
                                    <input class="form-check-input shadow-none" type="checkbox"
                                           name="rememberMe" id="rememberMe"
                                           @(ViewBag.SavedUsername != null ? "checked" : "")>
                                    <label class="form-check-label small text-muted" for="rememberMe">
                                        Ghi nhớ đăng nhập trên thiết bị này
                                    </label>
                                </div>
                            </div>

                            <div class="d-grid mb-4">
                                <button class="btn btn-login shadow-sm" type="submit">Đăng nhập ngay</button>
                            </div>
                        </form>

                        <div class="text-center">
                            <span class="text-muted small">Bạn chưa có tài khoản?</span>
                            <a href="/Account/Register" class="register-link small"> Đăng ký ngay</a>
                        </div>
                    </div>
                </div>
                <p class="text-center mt-4 text-white-50 small">&copy; 2026 Bản quyền thuộc về YourCompany</p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>