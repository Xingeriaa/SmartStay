@model IEnumerable<do_an_tot_nghiep.Models.NhaTro>
@{
    ViewData["Title"] = "Hệ Thống Nhà Trọ";
    var total = Model?.Count() ?? 0;
    var totalRevenue = Model?.Sum(x => x.GiaThue) ?? 0;
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

<div class="container-fluid px-0">

    <div class="d-flex flex-wrap justify-content-between align-items-end mb-4 px-1 gap-3">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index" class="text-muted text-decoration-none"><i class="fas fa-home me-1"></i>Trang chủ</a></li>
                    <li class="breadcrumb-item active">Quản lý nhà</li>
                </ol>
            </nav>
            <h1 class="fw-bold mb-0" style="font-size:1.75rem;">Hệ thống nhà trọ</h1>
            <p class="text-muted mb-0 mt-1">Quản lý danh sách tài sản, xem phòng và hoạt động kinh doanh</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm rounded-pill px-4 py-2">
            <i class="fas fa-plus me-1"></i> Thêm nhà mới
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible border-0 shadow-sm rounded-3 mb-4 fade show d-flex align-items-center">
            <i class="fas fa-check-circle fs-5 me-2"></i>
            <div>@TempData["Success"]</div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible border-0 shadow-sm rounded-3 mb-4 fade show d-flex align-items-center">
            <i class="fas fa-exclamation-triangle fs-5 me-2"></i>
            <div>@TempData["Error"]</div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="stat-card animate-fade-up p-3 bg-white rounded-4 shadow-sm h-100 border-start border-4 border-primary">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted fw-semibold mb-1" style="font-size: 0.85rem;">TỔNG TÒA NHÀ</div>
                        <h3 class="fw-bold mb-0 text-dark">@total</h3>
                    </div>
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3">
                        <i class="fas fa-building fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card animate-fade-up p-3 bg-white rounded-4 shadow-sm h-100 border-start border-4 border-info" style="animation-delay:.1s">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted fw-semibold mb-1" style="font-size: 0.85rem;">KẾT QUẢ LỌC</div>
                        <h3 class="fw-bold mb-0 text-dark" id="filteredCount">@total</h3>
                    </div>
                    <div class="bg-info bg-opacity-10 text-info rounded-circle p-3">
                        <i class="fas fa-filter fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card animate-fade-up p-3 bg-white rounded-4 shadow-sm h-100 border-start border-4 border-success" style="animation-delay:.2s">
                <div class="d-flex justify-content-between align-items-center">
                    <div style="min-width:0">
                        <div class="text-muted fw-semibold mb-1" style="font-size: 0.85rem;">DOANH THU DỰ KIẾN</div>
                        <h3 class="fw-bold mb-0 text-success text-truncate">@totalRevenue.ToString("N0") <small class="fs-6 text-muted fw-normal">đ</small></h3>
                    </div>
                    <div class="bg-success bg-opacity-10 text-success rounded-circle p-3">
                        <i class="fas fa-wallet fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card animate-fade-up p-3 bg-white rounded-4 shadow-sm h-100 border-start border-4 border-warning" style="animation-delay:.3s">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted fw-semibold mb-1" style="font-size: 0.85rem;">TÌNH TRẠNG</div>
                        <h3 class="fw-bold mb-0 text-success"><i class="fas fa-check-circle"></i></h3>
                    </div>
                    <div class="bg-warning bg-opacity-10 text-warning rounded-circle p-3">
                        <i class="fas fa-heartbeat fs-4"></i>
                    </div>
                </div>
                <div class="mt-2"><span class="text-success fw-bold small"><i class="fas fa-check-circle me-1"></i>Hệ thống ổn định</span></div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4 animate-fade-up p-4 rounded-4" style="animation-delay:.1s">
        <div class="row g-3 align-items-end">
            <div class="col-xl-4 col-md-6">
                <label class="fw-semibold small text-muted mb-2 d-block">
                    <i class="fas fa-search me-1"></i>Tìm kiếm tòa nhà
                </label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
                    <input type="text" class="form-control border-start-0 ps-0" id="searchInput" placeholder="Tên nhà, địa chỉ..." oninput="applyFilters()">
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <label class="fw-semibold small text-muted mb-2 d-block">
                    <i class="fas fa-map-marker-alt me-1"></i>Tỉnh / Thành phố
                </label>
                <select class="form-select" id="filterCity" onchange="applyFilters()">
                    <option value="">-- Tất cả tỉnh/thành --</option>
                    @foreach (var city in (Model?.Select(m => m.TinhThanh).Distinct().Where(c => !string.IsNullOrEmpty(c)) ?? Enumerable.Empty<string>()))
                    {
                        <option value="@city">@city</option>
                    }
                </select>
            </div>

            <div class="col-xl-2 col-md-4">
                <label class="fw-semibold small text-muted mb-2 d-block">
                    <i class="fas fa-city me-1"></i>Quận / Huyện
                </label>
                <select class="form-select" id="filterDistrict" onchange="applyFilters()">
                    <option value="">-- Tất cả --</option>
                </select>
            </div>

            <div class="col-xl-2 col-md-4">
                <label class="fw-semibold small text-muted mb-2 d-block">
                    <i class="fas fa-layer-group me-1"></i>Số tầng
                </label>
                <select class="form-select" id="filterFloor" onchange="applyFilters()">
                    <option value="">-- Tất cả --</option>
                    <option value="0">Trệt</option>
                    <option value="2">2 tầng</option>
                    <option value="3">3 tầng</option>
                    <option value="4">4 tầng</option>
                    <option value="5">5 tầng+</option>
                </select>
            </div>

            <div class="col-xl-1 col-md-4">
                <button class="btn btn-outline-secondary w-100" onclick="resetFilters()" title="Xóa bộ lọc">
                    <i class="fas fa-sync-alt"></i>
                </button>
            </div>
        </div>

        <div id="filterTags" class="mt-3 d-flex flex-wrap gap-2"></div>
    </div>

    <div class="card shadow-sm border-0 animate-fade-up rounded-4 overflow-hidden" style="animation-delay:.2s">
        <div class="card-header bg-white border-bottom p-3 d-flex flex-wrap justify-content-between align-items-center gap-3">
            <div class="d-flex align-items-center gap-3">
                <div class="bg-primary bg-opacity-10 rounded-3 d-flex align-items-center justify-content-center" style="width:45px;height:45px;">
                    <i class="fas fa-list-ul text-primary fs-5"></i>
                </div>
                <div>
                    <h5 class="fw-bold mb-0">Danh sách tòa nhà</h5>
                    <small class="text-muted">Đang hiển thị <span id="visibleCount" class="fw-bold text-dark">@total</span> / @total kết quả</small>
                </div>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-light border btn-sm" onclick="location.reload()" title="Làm mới">
                    <i class="fas fa-sync-alt text-muted"></i>
                </button>
                <button class="btn btn-outline-danger btn-sm" onclick="deleteSelected()">
                    <i class="fas fa-trash me-1"></i> Xóa đã chọn
                </button>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" id="dataTable">
                <thead class="table-light text-secondary">
                    <tr>
                        <th style="width:50px;" class="text-center">
                            <input class="form-check-input" type="checkbox" id="checkAll" onclick="toggleAll(this)">
                        </th>
                        <th>Tên tòa nhà</th>
                        <th>Địa chỉ</th>
                        <th class="text-center">Số tầng</th>
                        <th class="text-end">Giá thuê TB</th>
                        <th class="text-center">Ngày thu tiền</th>
                        <th>Dịch vụ</th>
                        <th class="text-center" style="width:200px;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr id="row-@item.Id"
                                data-name="@item.TenNhaTro?.ToLower()"
                                data-address="@item.DiaChiChiTiet?.ToLower()"
                                data-city="@item.TinhThanh"
                                data-district="@item.QuanHuyen"
                                data-floor="@item.LoaiNha">
                                <td class="text-center"><input class="form-check-input row-checkbox" type="checkbox" value="@item.Id"></td>
                                <td>
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center" style="width:40px;height:40px; flex-shrink:0;">
                                            <i class="fas fa-building text-secondary"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@item.TenNhaTro</div>
                                            <small class="text-muted">ID: #@item.Id</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="small fw-medium">@item.DiaChiChiTiet</div>
                                    <div class="text-muted" style="font-size:.75rem;">@item.PhuongXa, @item.QuanHuyen @(!string.IsNullOrEmpty(item.TinhThanh) ? "– " + item.TinhThanh : "")</div>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-light text-dark border">
                                        @(item.LoaiNha == 0 ? "Trệt" : item.LoaiNha + " tầng")
                                    </span>
                                </td>
                                <td class="text-end fw-bold text-success">
                                    @item.GiaThue.ToString("N0") <small class="text-muted fw-normal">đ</small>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25">Ngày @item.NgayThuTien</span>
                                </td>
                                <td>
                                    @{
                                        var allDichVus = ViewBag.AllDichVus as List<do_an_tot_nghiep.Models.DichVu>;
                                    }
                                    @if (!string.IsNullOrEmpty(item.DanhSachDichVu))
                                    {
                                        var dvIds = item.DanhSachDichVu.Split(',');
                                        int shown = 0;
                                        foreach (var idStr in dvIds)
                                        {
                                            if (shown >= 2) break;
                                            if (int.TryParse(idStr.Trim(), out int dvId))
                                            {
                                                var dvObj = allDichVus?.FirstOrDefault(d => d.Id == dvId);
                                                if (dvObj != null)
                                                {
                                                    <span class="badge bg-primary bg-opacity-10 text-primary me-1 mb-1">@dvObj.Ten</span>
                                                    ; shown++;
                                                }
                                            }
                                        }
                                        if (dvIds.Length > 2)
                                        {

                                            <span class="badge bg-secondary text-white">+@(dvIds.Length - 2)</span>
                                        }
                                    }
                                    else
                                    {

                                        <span class="text-muted small">—</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Xem chi tiết"><i class="fas fa-eye"></i></a>
                                        <a asp-controller="QuanLyPhong" asp-action="Index" asp-route-nhaId="@item.Id" class="btn btn-sm btn-outline-success" title="Danh sách phòng"><i class="fas fa-door-open"></i></a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Chỉnh sửa"><i class="fas fa-edit"></i></a>
                                        <button type="button" onclick="deleteNha(@item.Id, '@Html.Raw(item.TenNhaTro?.Replace("'", "\\'") ?? "")')" class="btn btn-sm btn-outline-danger" title="Xóa"><i class="fas fa-trash-alt"></i></button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-5">
                                <i class="fas fa-building fa-3x text-muted opacity-25 d-block mb-3"></i>
                                <h6 class="text-muted">Chưa có nhà trọ nào trong hệ thống</h6>
                                <a asp-action="Create" class="btn btn-primary btn-sm mt-2 rounded-pill px-3">
                                    <i class="fas fa-plus me-1"></i> Thêm nhà mới
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div id="noResultsMsg" class="text-center py-5 d-none bg-light">
            <i class="fas fa-search fa-2x text-muted opacity-25 d-block mb-2"></i>
            <h6 class="text-muted">Không tìm thấy kết quả phù hợp</h6>
            <button class="btn btn-sm btn-outline-secondary mt-2" onclick="resetFilters()">
                <i class="fas fa-times me-1"></i> Xóa bộ lọc
            </button>
        </div>

        <div class="card-footer bg-light border-top d-flex justify-content-between align-items-center px-4 py-3">
            <span class="text-muted small">Tổng: <strong>@total</strong> tòa nhà | Đang hiển thị: <strong><span id="footerCount">@total</span></strong></span>
            <span class="text-muted small">Tổng doanh thu niêm yết: <strong class="text-success fs-6">@totalRevenue.ToString("N0") đ</strong></span>
        </div>
    </div>
</div>

<form id="deleteForm" method="post" asp-action="Delete" asp-controller="QuanLyNha">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deleteId">
</form>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        let allRows = [];

        document.addEventListener("DOMContentLoaded", function() {
            // Khởi tạo mảng row một lần khi DOM load xong
            allRows = Array.from(document.querySelectorAll('#dataTable tbody tr[data-name]'));

            // Xử lý thay đổi Tỉnh -> update dropdown Quận
            document.getElementById('filterCity').addEventListener('change', function () {
                const selectedCity = this.value;
                const distSelect = document.getElementById('filterDistrict');
                distSelect.innerHTML = '<option value="">-- Tất cả --</option>';

                if (selectedCity) {
                    const districts = [...new Set(
                        allRows.filter(r => r.dataset.city === selectedCity)
                               .map(r => r.dataset.district).filter(Boolean)
                    )];
                    districts.forEach(d => distSelect.add(new Option(d, d)));
                }
                applyFilters();
            });
        });

        // Hàm áp dụng bộ lọc
        function applyFilters() {
            const q        = document.getElementById('searchInput').value.toLowerCase().trim();
            const city     = document.getElementById('filterCity').value;
            const district = document.getElementById('filterDistrict').value;
            const floor    = document.getElementById('filterFloor').value;

            let visible = 0;
            allRows.forEach(row => {
                const matchQ     = !q || (row.dataset.name && row.dataset.name.includes(q))
                                      || (row.dataset.address && row.dataset.address.includes(q))
                                      || (row.dataset.city && row.dataset.city.toLowerCase().includes(q))
                                      || (row.dataset.district && row.dataset.district.toLowerCase().includes(q));
                const matchCity  = !city || row.dataset.city === city;
                const matchDist  = !district || row.dataset.district === district;
                // Xử lý riêng cho tầng "5 tầng+"
                const rowFloor = parseInt(row.dataset.floor) || 0;
                let matchFloor = !floor;
                if (floor) {
                    if (floor === "5") matchFloor = rowFloor >= 5;
                    else matchFloor = row.dataset.floor === floor;
                }

                const show = matchQ && matchCity && matchDist && matchFloor;
                row.style.display = show ? '' : 'none';
                if (show) visible++;
            });

            document.getElementById('filteredCount').textContent = visible;
            document.getElementById('visibleCount').textContent  = visible;
            document.getElementById('footerCount').textContent   = visible;

            const noResults = document.getElementById('noResultsMsg');
            if(visible > 0) {
                noResults.classList.add('d-none');
            } else {
                noResults.classList.remove('d-none');
            }

            renderFilterTags(q, city, district, floor);
        }

        // Gắn tag hiển thị bộ lọc
        function renderFilterTags(q, city, district, floor) {
            const container = document.getElementById('filterTags');
            container.innerHTML = '';

            const createTag = (text, clearId, clearVal = '') => {
                const tag = document.createElement('span');
                tag.className = 'badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25 px-3 py-2 rounded-pill d-flex align-items-center gap-2';
                tag.style.fontSize = '.8rem';
                tag.innerHTML = `${text} <i class="fas fa-times" style="cursor:pointer; opacity:.7" onclick="clearFilter('${clearId}', '${clearVal}')"></i>`;
                return tag;
            };

            if (q) container.appendChild(createTag(`🔍 "${q}"`, 'searchInput'));
            if (city) container.appendChild(createTag(`🏙 ${city}`, 'filterCity'));
            if (district) container.appendChild(createTag(`📍 ${district}`, 'filterDistrict'));
            if (floor !== '') container.appendChild(createTag(`🏢 ${floor === '0' ? 'Trệt' : floor + ' tầng'}`, 'filterFloor'));
        }

        // Clear filter helper
        window.clearFilter = function(inputId, val) {
            document.getElementById(inputId).value = val;
            if(inputId === 'filterCity') {
                document.getElementById('filterDistrict').innerHTML = '<option value="">-- Tất cả --</option>';
            }
            applyFilters();
        };

        function resetFilters() {
            document.getElementById('searchInput').value = '';
            document.getElementById('filterCity').value  = '';
            document.getElementById('filterDistrict').innerHTML = '<option value="">-- Tất cả --</option>';
            document.getElementById('filterFloor').value = '';
            applyFilters();
        }

        // Checkbox logic
        function toggleAll(src) {
            document.querySelectorAll('.row-checkbox').forEach(cb => cb.checked = src.checked);
        }

        // Delete single item
        function deleteNha(id, name) {
            Swal.fire({
                title: `Xóa "${name}"?`,
                text: 'Tòa nhà sẽ bị ẩn khỏi hệ thống (Soft Delete).',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ef4444',
                cancelButtonColor: '#64748b',
                confirmButtonText: 'Xóa ngay',
                cancelButtonText: 'Hủy'
            }).then(r => {
                if (r.isConfirmed) {
                    document.getElementById('deleteId').value = id;
                    document.getElementById('deleteForm').submit();
                }
            });
        }

        // Delete multiple items via AJAX
        function deleteSelected() {
            const ids = Array.from(document.querySelectorAll('.row-checkbox:checked')).map(cb => parseInt(cb.value));
            if (!ids.length) {
                Swal.fire({ icon: 'info', title: 'Thông báo', text: 'Vui lòng chọn ít nhất một nhà để xóa!', confirmButtonColor: '#0d6efd' });
                return;
            }
            Swal.fire({
                title: `Xóa ${ids.length} nhà đã chọn?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ef4444',
                cancelButtonColor: '#64748b',
                confirmButtonText: 'Xóa tất cả',
                cancelButtonText: 'Hủy'
            }).then(r => {
                if (!r.isConfirmed) return;

                $.ajax({
                    url: '/QuanLyNha/DeleteSelected',
                    type: 'POST',
                    data: { ids: ids, __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() },
                    success: res => {
                        if (res.success) {
                            Swal.fire('Đã xóa!', res.message, 'success').then(() => location.reload());
                        } else {
                            Swal.fire('Lỗi!', res.message, 'error');
                        }
                    },
                    error: () => Swal.fire('Lỗi!', 'Không thể thực hiện yêu cầu.', 'error')
                });
            });
        }
    </script>
}