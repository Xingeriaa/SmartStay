        <div class="container">
            <div class="top-info">
                <span><i class="fa-solid fa-envelope"></i> support@residentpro.vn</span>
                <span><i class="fa-solid fa-phone"></i> 0912 345 678</span>
            </div>
            <div class="top-social">
                <span>Kết nối: </span>
                <a href="#"><i class="fa-brands fa-facebook"></i></a>
                <a href="#"><i class="fa-brands fa-tiktok"></i></a>
                <a href="#"><i class="fa-brands fa-youtube"></i></a>
            </div>
        </div>
    </div>

    <header>
        <div class="container nav-wrapper">
            <a href="#" class="logo">
                <i class="fa-solid fa-building-user"></i>
                <span>SmartStay</span>
            </a>

            <ul class="main-menu">
                <li><a href="#home">Trang chủ</a></li>
                <li><a href="#features">Tính năng</a></li>
                <li><a href="#app">Ứng dụng</a></li>
                <li><a href="#pricing">Bảng giá</a></li>
                <li><a href="#contact">Liên hệ</a></li>
            </ul>

            <div class="header-actions">
                <a href="/Account/Login" class="btn btn-outline">Đăng nhập</a>
                <a href="/Account/Register" class="btn btn-primary">Đăng ký ngay</a>
            </div>

            <div class="hamburger">
                <i class="fa-solid fa-bars"></i>
            </div>
        </div>
    </header>

    <section class="hero" id="home">
        <div class="hero-bg-shape"></div>
        <div class="container">
            <div class="hero-content animate__animated animate__fadeInLeft">
