            // 2. Mobile Menu Toggle
            $('.hamburger').click(function() {
                // Đơn giản hóa: tạo một menu mobile full màn hình
                // Trong thực tế bạn có thể toggle class
                alert('Menu mobile sẽ hiện ra ở đây (Bạn có thể code thêm phần slideDown)');
            });

            // 3. Tab Logic (Vanilla JS wrap in jQuery)
            window.openTab = function(evt, tabName) {
                var i, tabcontent, tablinks;

                // Ẩn tất cả nội dung tab
                tabcontent = document.getElementsByClassName("tab-content");
                for (i = 0; i < tabcontent.length; i++) {
                    tabcontent[i].style.display = "none";
                    tabcontent[i].classList.remove("active");
                }

                // Xóa active ở button
                tablinks = document.getElementsByClassName("tab-btn");
                for (i = 0; i < tablinks.length; i++) {
                    tablinks[i].className = tablinks[i].className.replace(" active", "");
                }

                // Hiện tab hiện tại
                document.getElementById(tabName).style.display = "grid";
                // setTimeout để animation chạy
                setTimeout(() => {
                   document.getElementById(tabName).classList.add("active");
                }, 10);

                evt.currentTarget.className += " active";
            }

            // 4. Accordion Logic
            $('.accordion-header').click(function() {
                const item = $(this).parent();
                const content = $(this).next();

                if (item.hasClass('active')) {
                    item.removeClass('active');
                    content.css('max-height', '0');
                } else {
                    // Đóng các cái khác
                    $('.accordion-item').removeClass('active');
                    $('.accordion-content').css('max-height', '0');

                    // Mở cái này
                    item.addClass('active');
                    content.css('max-height', content[0].scrollHeight + "px");
                }
            });

            // 5. Counter Animation (Chạy số khi cuộn tới)
            let counted = false;
            $(window).scroll(function() {
                var oTop = $('.stats-section').offset().top - window.innerHeight;
                if (counted == false && $(window).scrollTop() > oTop) {
                    $('.count').each(function() {
                        var $this = $(this),
                            countTo = $this.attr('data-target');
                        $({ countNum: $this.text()}).animate({
                            countNum: countTo
                        },
                        {
                            duration: 2000,
                            easing: 'swing',
                            step: function() {
                                $this.text(Math.floor(this.countNum).toLocaleString());
                            },
                            complete: function() {
                                $this.text(this.countNum.toLocaleString());
                            }
                        });
                    });
                    counted = true;
                }
            });

            // 6. Smooth Scroll for Anchor Links
            $('a[href^="#"]').on('click', function (e) {
                e.preventDefault();
                var target = this.hash;
                if(target) {
                    var $target = $(target);
                    if($target.length) {
                        $('html, body').stop().animate({
                            'scrollTop': $target.offset().top - 100
                        }, 800, 'swing');
                    }
                }
            });
        });
    </script>
