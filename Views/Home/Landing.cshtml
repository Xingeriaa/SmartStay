@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> SmartStay - Hệ Thống Quản Lý Nhà Trọ & Chung Cư Mini Toàn Diện</title>
    <meta name="description" content="Giải pháp chuyển đổi số cho chủ nhà trọ. Tự động hóa quy trình thu tiền, chốt điện nước, quản lý cư dân và hợp đồng.">

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <style>
        /* =============================================
                1. GLOBAL VARIABLES & RESET
                =============================================
                */
        :root {
            /* Color Palette */
            --primary: #00b894; /* Màu xanh mint hiện đại */
            --primary-dark: #00a383;
            --secondary: #0984e3; /* Màu xanh dương tin cậy */
            --accent: #fdcb6e; /* Màu vàng điểm nhấn */
            --danger: #d63031;
            /* Neutral Colors */
            --text-main: #2d3436;
            --text-light: #636e72;
            --bg-light: #f5f6fa;
            --bg-white: #ffffff;
            --border: #dfe6e9;
            /* Spacing & Layout */
            --container-width: 1280px;
            --header-height: 80px;
            --radius-sm: 8px;
            --radius-md: 16px;
            --radius-lg: 30px;
            /* Shadows */
            --shadow-sm: 0 2px 8px rgba(0,0,0,0.05);
            --shadow-md: 0 8px 24px rgba(0,0,0,0.08);
            --shadow-lg: 0 15px 35px rgba(0,0,0,0.1);
            --shadow-hover: 0 20px 40px rgba(0,184,148,0.2);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            outline: none;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Inter', sans-serif;
            color: var(--text-main);
            background-color: var(--bg-white);
            line-height: 1.7;
            overflow-x: hidden;
            font-size: 16px;
        }

        a {
            text-decoration: none;
            color: inherit;
            transition: all 0.3s ease;
        }

        ul {
            list-style: none;
        }

        img {
            max-width: 100%;
            display: block;
        }

        /* Utility Classes */
        .container {
            max-width: var(--container-width);
            margin: 0 auto;
            padding: 0 20px;
        }

        .text-center {
            text-align: center;
        }

        .text-primary {
            color: var(--primary);
        }

        .fw-bold {
            font-weight: 700;
        }

        .mb-1 {
            margin-bottom: 10px;
        }

        .mb-2 {
            margin-bottom: 20px;
        }

        .mb-3 {
            margin-bottom: 30px;
        }

        .mb-5 {
            margin-bottom: 50px;
        }

        /* Buttons */
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 12px 28px;
            border-radius: 50px;
            font-weight: 600;
            font-size: 15px;
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid transparent;
            gap: 10px;
        }

        .btn-primary {
            background: var(--primary);
            color: #fff;
            box-shadow: 0 4px 15px rgba(0,184,148,0.3);
        }

            .btn-primary:hover {
                background: var(--primary-dark);
                transform: translateY(-3px);
                box-shadow: 0 8px 20px rgba(0,184,148,0.4);
            }

        .btn-outline {
            background: transparent;
            border-color: var(--primary);
            color: var(--primary);
        }

            .btn-outline:hover {
                background: var(--primary);
                color: #fff;
            }

        .btn-white {
            background: #fff;
            color: var(--primary);
        }

            .btn-white:hover {
                background: #f0f0f0;
            }

        /* Section Header */
        .section-header {
            text-align: center;
            max-width: 700px;
            margin: 0 auto 60px;
        }

        .section-tag {
            display: inline-block;
            padding: 6px 16px;
            background: rgba(0,184,148,0.1);
            color: var(--primary);
            border-radius: 20px;
            font-size: 13px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 15px;
        }

        .section-header h2 {
            font-size: 36px;
            font-weight: 800;
            margin-bottom: 20px;
            color: #2d3436;
        }

        .section-header p {
            color: var(--text-light);
            font-size: 18px;
        }

        /* =============================================
                2. HEADER & NAVIGATION
                =============================================
                */
        .top-bar {
            background: #2d3436;
            color: #b2bec3;
            padding: 8px 0;
            font-size: 13px;
        }

            .top-bar .container {
                display: flex;
                justify-content: space-between;
            }

        .top-info span {
            margin-right: 20px;
        }

        .top-info i {
            margin-right: 5px;
            color: var(--primary);
        }

        header {
            position: sticky;
            top: 0;
            z-index: 999;
            background: rgba(255,255,255,0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--border);
            height: var(--header-height);
            transition: all 0.3s;
        }

        .nav-wrapper {
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 100%;
        }

        .logo {
            font-size: 26px;
            font-weight: 900;
            color: var(--primary);
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .logo span {
                color: #2d3436;
            }

        .main-menu {
            display: flex;
            gap: 30px;
        }

            .main-menu a {
                font-weight: 500;
                color: var(--text-main);
                position: relative;
            }

                .main-menu a::after {
                    content: '';
                    position: absolute;
                    width: 0;
                    height: 2px;
                    bottom: -5px;
                    left: 0;
                    background: var(--primary);
                    transition: width 0.3s;
                }

                .main-menu a:hover {
                    color: var(--primary);
                }

                    .main-menu a:hover::after {
                        width: 100%;
                    }

        .header-actions {
            display: flex;
            gap: 15px;
        }

        /* Mobile Menu Toggle */
        .hamburger {
            display: none;
            font-size: 24px;
            cursor: pointer;
            color: var(--text-main);
        }

        /* =============================================
                3. HERO SECTION
                =============================================
                */
        .hero {
            padding: 80px 0 100px;
            background: linear-gradient(120deg, #fdfbfb 0%, #ebedee 100%);
            position: relative;
            overflow: hidden;
        }

        .hero-bg-shape {
            position: absolute;
            top: -100px;
            right: -100px;
            width: 600px;
            height: 600px;
            background: var(--primary);
            opacity: 0.05;
            border-radius: 50%;
            z-index: 1;
        }

        .hero .container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 60px;
            align-items: center;
            position: relative;
            z-index: 2;
        }

        .hero-content h1 {
            font-size: 52px;
            font-weight: 800;
            line-height: 1.2;
            margin-bottom: 25px;
            color: #2d3436;
        }

            .hero-content h1 span {
                color: var(--primary);
                position: relative;
                display: inline-block;
            }

                /* Hiệu ứng gạch chân dưới chữ */
                .hero-content h1 span::before {
                    content: '';
                    position: absolute;
                    bottom: 5px;
                    left: 0;
                    width: 100%;
                    height: 15px;
                    background: rgba(0,184,148,0.2);
                    z-index: -1;
                    transform: skew(-10deg);
                }

        .hero-content p {
            font-size: 20px;
            color: var(--text-light);
            margin-bottom: 40px;
        }

        .hero-features {
            display: flex;
            gap: 20px;
            margin-bottom: 40px;
        }

        .hero-feat-item {
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 14px;
            font-weight: 500;
            color: var(--text-light);
        }

            .hero-feat-item i {
                color: var(--primary);
                background: rgba(0,184,148,0.1);
                padding: 8px;
                border-radius: 50%;
            }

        .hero-img {
            position: relative;
        }

        .hero-main-img {
            border-radius: 20px;
            box-shadow: var(--shadow-lg);
            border: 8px solid #fff;
            animation: float 6s ease-in-out infinite;
        }

        .floating-card {
            position: absolute;
            background: #fff;
            padding: 15px 25px;
            border-radius: 12px;
            box-shadow: var(--shadow-md);
            display: flex;
            align-items: center;
            gap: 15px;
            z-index: 3;
            animation: bounce 4s infinite;
        }

        .fc-1 {
            top: 10%;
            left: -30px;
        }

        .fc-2 {
            bottom: 10%;
            right: -30px;
            animation-delay: 2s;
        }

        .fc-icon {
            width: 40px;
            height: 40px;
            background: #e1fcf6;
            color: var(--primary);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
        }

        /* =============================================
                4. STATS COUNTER
                =============================================
                */
        .stats-section {
            padding: 60px 0;
            background: var(--bg-white);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 30px;
        }

        .stat-item {
            text-align: center;
            padding: 20px;
            border-right: 1px solid var(--border);
        }

            .stat-item:last-child {
                border-right: none;
            }

        .stat-number {
            font-size: 42px;
            font-weight: 800;
            color: var(--primary);
            margin-bottom: 5px;
            display: block;
        }

        .stat-label {
            color: var(--text-light);
            font-weight: 500;
            text-transform: uppercase;
            font-size: 14px;
            letter-spacing: 1px;
        }

        /* =============================================
                5. FEATURES (TABBED)
                =============================================
                */
        .features-section {
            padding: 100px 0;
            background: #f8f9fa;
        }

        .feature-tabs {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-bottom: 50px;
            flex-wrap: wrap;
        }

        .tab-btn {
            padding: 15px 30px;
            background: #fff;
            border: 1px solid var(--border);
            border-radius: 50px;
            font-weight: 600;
            color: var(--text-light);
            cursor: pointer;
            transition: all 0.3s;
        }

            .tab-btn.active, .tab-btn:hover {
                background: var(--primary);
                color: #fff;
                border-color: var(--primary);
                box-shadow: var(--shadow-sm);
            }

        .tab-content {
            display: none;
            animation: fadeIn 0.5s;
        }

            .tab-content.active {
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 50px;
                align-items: center;
            }

        .feat-img img {
            border-radius: 20px;
            box-shadow: var(--shadow-md);
        }

        .feat-list .feat-item {
            margin-bottom: 25px;
            display: flex;
            gap: 20px;
        }

        .feat-item-icon {
            width: 50px;
            height: 50px;
            background: #fff;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary);
            font-size: 24px;
            box-shadow: var(--shadow-sm);
            flex-shrink: 0;
        }

        .feat-item-text h4 {
            font-size: 18px;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .feat-item-text p {
            color: var(--text-light);
            font-size: 15px;
        }

        /* =============================================
                6. APP SHOWCASE
                =============================================
                */
        .app-section {
            padding: 100px 0;
            background: #2d3436;
            color: #fff;
            position: relative;
            overflow: hidden;
        }

        .app-bg-circle {
            position: absolute;
            width: 800px;
            height: 800px;
            background: rgba(255,255,255,0.05);
            border-radius: 50%;
            top: -200px;
            left: -200px;
        }

        .app-container {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .app-text {
            flex: 1;
            padding-right: 50px;
        }

            .app-text h2 {
                font-size: 40px;
                margin-bottom: 20px;
            }

            .app-text p {
                color: #b2bec3;
                font-size: 18px;
                margin-bottom: 40px;
            }

        .store-btns {
            display: flex;
            gap: 20px;
        }

        .store-btn img {
            height: 50px;
            transition: transform 0.3s;
        }

        .store-btn:hover img {
            transform: scale(1.05);
        }

        .app-mockups {
            flex: 1;
            display: flex;
            gap: 20px;
            justify-content: flex-end;
        }

        .phone-mock {
            width: 260px;
            border-radius: 35px;
            border: 8px solid #111;
            overflow: hidden;
            box-shadow: 0 20px 50px rgba(0,0,0,0.5);
        }

            .phone-mock.down {
                margin-top: 50px;
            }

        /* =============================================
                7. PRICING TABLE
                =============================================
                */
        .pricing-section {
            padding: 100px 0;
        }

        .pricing-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 30px;
            margin-top: 50px;
        }

        .price-card {
            background: #fff;
            border-radius: 20px;
            padding: 40px;
            border: 1px solid var(--border);
            text-align: center;
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
        }

            .price-card:hover {
                transform: translateY(-10px);
                box-shadow: var(--shadow-lg);
                border-color: var(--primary);
            }

            .price-card.popular {
                border-color: var(--primary);
                box-shadow: var(--shadow-md);
                background: linear-gradient(to bottom, #f0fff4, #fff);
            }

        .badge-popular {
            position: absolute;
            top: 20px;
            right: -30px;
            background: var(--accent);
            color: #2d3436;
            padding: 5px 40px;
            transform: rotate(45deg);
            font-size: 12px;
            font-weight: 700;
        }

        .price-header h3 {
            font-size: 24px;
            margin-bottom: 15px;
        }

        .price-amount {
            font-size: 48px;
            font-weight: 800;
            color: var(--primary);
        }

        .price-period {
            color: var(--text-light);
            font-size: 16px;
        }

        .price-features {
            margin: 30px 0;
            text-align: left;
        }

            .price-features li {
                margin-bottom: 12px;
                color: var(--text-main);
                display: flex;
                align-items: center;
                gap: 10px;
            }

                .price-features li i {
                    color: var(--primary);
                }

                .price-features li.disabled {
                    color: #b2bec3;
                    text-decoration: line-through;
                }

        /* =============================================
                8. TESTIMONIALS & FAQ
                =============================================
                */
        .feedback-section {
            background: var(--bg-light);
            padding: 100px 0;
        }

        .testi-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 30px;
        }

        .testi-card {
            background: #fff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: var(--shadow-sm);
        }

        .testi-user {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 20px;
        }

            .testi-user img {
                width: 50px;
                height: 50px;
                border-radius: 50%;
                object-fit: cover;
            }

        .quote {
            font-style: italic;
            color: var(--text-light);
        }

        /* FAQ Accordion */
        .faq-section {
            padding: 100px 0;
        }

        .accordion {
            max-width: 800px;
            margin: 0 auto;
        }

        .accordion-item {
            border: 1px solid var(--border);
            border-radius: 8px;
            margin-bottom: 15px;
            overflow: hidden;
        }

        .accordion-header {
            background: #fff;
            padding: 20px;
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-weight: 600;
            color: var(--text-main);
        }

            .accordion-header:hover {
                background: #f9f9f9;
            }

        .accordion-content {
            padding: 0 20px;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease-out;
            background: #fff;
            color: var(--text-light);
        }

            .accordion-content p {
                padding-bottom: 20px;
            }

        .accordion-item.active .accordion-header {
            color: var(--primary);
            background: #f0fff4;
        }

        /* =============================================
                9. FOOTER
                =============================================
                */
        footer {
            background: #1e272e;
            color: #b2bec3;
            padding: 80px 0 30px;
        }

        .footer-grid {
            display: grid;
            grid-template-columns: 2fr 1fr 1fr 1.5fr;
            gap: 50px;
            margin-bottom: 60px;
        }

        .footer-info h3 {
            color: #fff;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .social-links {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }

            .social-links a {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                background: rgba(255,255,255,0.1);
                display: flex;
                align-items: center;
                justify-content: center;
                transition: all 0.3s;
            }

                .social-links a:hover {
                    background: var(--primary);
                    color: #fff;
                }

        .footer-col h4 {
            color: #fff;
            margin-bottom: 25px;
            font-size: 18px;
        }

        .footer-links li {
            margin-bottom: 12px;
        }

        .footer-links a:hover {
            color: var(--primary);
            padding-left: 5px;
        }

        .copyright {
            text-align: center;
            border-top: 1px solid rgba(255,255,255,0.1);
            padding-top: 30px;
            font-size: 14px;
        }

        /* =============================================
                10. ANIMATIONS & RESPONSIVE
                =============================================
                */
        @@keyframes float {
            0%, 100%

        {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-20px);
        }

        }

        @@keyframes bounce {
            0%, 100%

        {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }

        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* Responsive */
        @@media (max-width: 1024px) {
            .hero .container

        {
            grid-template-columns: 1fr;
            text-align: center;
        }

        .hero-content h1 {
            font-size: 40px;
        }

        .hero-features {
            justify-content: center;
        }

        .hero-img {
            margin-top: 50px;
        }

        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .stat-item {
            border-right: none;
            border-bottom: 1px solid var(--border);
        }

        .pricing-grid {
            grid-template-columns: 1fr;
            max-width: 500px;
            margin: 50px auto;
        }

        .app-container {
            flex-direction: column;
            text-align: center;
        }

        .app-text {
            padding: 0;
            margin-bottom: 50px;
        }

        .store-btns {
            justify-content: center;
        }

        .app-mockups {
            justify-content: center;
        }

        }

        @@media (max-width: 768px) {
            .main-menu, .header-actions

        {
            display: none;
        }

        .hamburger {
            display: block;
        }

        .testi-grid {
            grid-template-columns: 1fr;
        }

        .footer-grid {
            grid-template-columns: 1fr;
        }

        .tab-content.active {
            grid-template-columns: 1fr;
        }

        .feat-img {
            order: -1;
            margin-bottom: 30px;
        }

        }
    </style>
</head>
<body>

