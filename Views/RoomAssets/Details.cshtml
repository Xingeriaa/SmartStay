@model do_an_tot_nghiep.Models.RoomAsset
@{
    ViewData["Title"] = "Thiết bị — chi tiết";
    string statusText  = Model.Status switch { 1 => "Hoạt động", 2 => "Hư hỏng", 3 => "Hỏng", 4 => "Thanh lý", _ => "?" };
    string statusColor = Model.Status switch { 1 => "#00b894", 2 => "#fdcb6e", 3 => "#d63031", _ => "#636e72" };
}

<div style="max-width:700px;margin:0 auto;">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb small">
            <li class="breadcrumb-item"><a asp-action="Index" asp-route-roomId="@Model.RoomId" class="text-muted text-decoration-none">Thiết bị phòng</a></li>
            <li class="breadcrumb-item active">@Model.AssetName</li>
        </ol>
    </nav>

    <div class="card border-0 shadow-sm rounded-4 mb-3">
        <div class="card-header bg-white border-0 py-3 px-4 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-2">
                <span style="width:38px;height:38px;background:linear-gradient(135deg,#636e72,#b2bec3);border-radius:10px;display:flex;align-items:center;justify-content:center;">
                    <i class="fas fa-cube text-white"></i>
                </span>
                <h5 class="mb-0 fw-bold">@Model.AssetName</h5>
            </div>
            <span class="badge" style="background:@statusColor;color:#fff;">@statusText</span>
        </div>
        <div class="card-body p-4">
            <div class="row g-3">
                <div class="col-6">
                    <div class="text-muted small mb-1">Phòng ID</div>
                    <div class="fw-semibold">@Model.RoomId</div>
                </div>
                <div class="col-6">
                    <div class="text-muted small mb-1">Số lượng</div>
                    <div class="fw-semibold">@Model.Quantity</div>
                </div>
                @if (!string.IsNullOrEmpty(Model.SerialNumber))
                {
                    <div class="col-6">
                        <div class="text-muted small mb-1">Serial Number</div>
                        <div class="fw-semibold">@Model.SerialNumber</div>
                    </div>
                }
                @if (Model.PurchaseDate.HasValue)
                {
                    <div class="col-6">
                        <div class="text-muted small mb-1">Ngày mua</div>
                        <div class="fw-semibold">@Model.PurchaseDate.Value.ToString("dd/MM/yyyy")</div>
                    </div>
                }
                @if (Model.WarrantyExpiry.HasValue)
                {
                    <div class="col-6">
                        <div class="text-muted small mb-1">Hết bảo hành</div>
                        <div class="fw-semibold @(Model.WarrantyExpiry.Value < DateTime.Now ? "text-danger" : "text-success")">
                            @Model.WarrantyExpiry.Value.ToString("dd/MM/yyyy")
                        </div>
                    </div>
                }
                <div class="col-6">
                    <div class="text-muted small mb-1">Tạo lúc</div>
                    <div class="fw-semibold">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="fas fa-edit me-1"></i>Chỉnh sửa
        </a>
        <a asp-action="Index" asp-route-roomId="@Model.RoomId" class="btn btn-light border">
            <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
    </div>
</div>
