@model do_an_tot_nghiep.Models.RoomAsset
@{
    ViewData["Title"] = "Chi tiết thiết bị";
    string statusText = Model.Status switch { 1 => "Hoạt động tốt", 2 => "Hư hỏng", 3 => "Đã hỏng", 4 => "Thanh lý", _ => "Không xác định" };
    string statusBadge = Model.Status switch
    {
        1 => "bg-soft-success text-success",
        2 => "bg-soft-warning text-warning",
        3 => "bg-soft-danger text-danger",
        _ => "bg-soft-secondary text-secondary"
    };
}

<div class="container-fluid px-0" style="max-width: 900px;">
    @* --- BREADCRUMB --- *@
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index" class="text-muted text-decoration-none"><i class="fas fa-home me-1"></i>Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-route-roomId="@Model.RoomId" class="text-muted text-decoration-none">Thiết bị phòng</a></li>
            <li class="breadcrumb-item active">@Model.AssetName</li>
        </ol>
    </nav>

    @* --- HEADER TITLE --- *@
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0" style="font-size:1.75rem;">Thông tin tài sản</h2>
            <p class="text-muted mb-0">Chi tiết thông số và tình trạng thiết bị nội thất</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-gradient-primary btn-custom shadow">
                <i class="fas fa-edit me-1"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" asp-route-roomId="@Model.RoomId" class="btn btn-light border btn-custom">
                <i class="fas fa-arrow-left me-1"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="row g-4">
        @* CỘT TRÁI: THÔNG TIN CHÍNH *@
        <div class="col-md-7">
            <div class="main-card p-4 h-100 animate-fade-up">
                <div class="d-flex align-items-center gap-3 mb-4">
                    <div class="stat-icon-wrapper bg-icon-theme" style="width: 50px; height: 50px;">
                        <i class="fas fa-couch fs-4"></i>
                    </div>
                    <div>
                        <h4 class="fw-bold mb-0">@Model.AssetName</h4>
                        <span class="badge @statusBadge rounded-pill">@statusText</span>
                    </div>
                </div>

                <div class="row g-4">
                    <div class="col-6">
                        <label class="text-muted small d-block mb-1 text-uppercase fw-bold">Số lượng</label>
                        <div class="fs-5 fw-bold">@Model.Quantity cái/bộ</div>
                    </div>
                    <div class="col-6">
                        <label class="text-muted small d-block mb-1 text-uppercase fw-bold">Mã phòng</label>
                        <div class="fs-5 fw-bold text-brand">#@Model.RoomId</div>
                    </div>
                    <div class="col-12">
                        <hr class="my-2 opacity-5">
                    </div>
                    <div class="col-12">
                        <label class="text-muted small d-block mb-1 text-uppercase fw-bold">Serial Number (S/N)</label>
                        <div class="p-3 bg-light rounded-3 border-dashed">
                            <code class="fs-6">@(string.IsNullOrEmpty(Model.SerialNumber) ? "Chưa cập nhật số định danh" : Model.SerialNumber)</code>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @* CỘT PHẢI: THỜI HẠN & LOGS *@
        <div class="col-md-5">
            <div class="main-card p-4 animate-fade-up" style="animation-delay: 0.1s">
                <h6 class="fw-bold mb-4 border-bottom pb-2"><i class="fas fa-shield-alt me-2 text-primary"></i>Bảo hành & Lịch sử</h6>

                <div class="d-flex align-items-center mb-4">
                    <div class="me-3">
                        <i class="fas fa-calendar-check text-muted fs-4"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Ngày mua hàng</div>
                        <div class="fw-bold">@(Model.PurchaseDate?.ToString("dd/MM/yyyy") ?? "---")</div>
                    </div>
                </div>

                @{
                    bool isExpired = Model.WarrantyExpiry.HasValue && Model.WarrantyExpiry.Value < DateTime.Now;
                }
                <div class="d-flex align-items-center mb-4">
                    <div class="me-3">
                        <i class="fas fa-clock @(isExpired ? "text-danger" : "text-success") fs-4"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Hết hạn bảo hành</div>
                        <div class="fw-bold @(isExpired ? "text-danger" : "text-success")">
                            @(Model.WarrantyExpiry?.ToString("dd/MM/yyyy") ?? "Không có thông tin")
                            @if (isExpired)
                            {
                                <span class="ms-1 small fw-normal">(Đã hết hạn)</span>
                            }
                        </div>
                    </div>
                </div>

                <div class="bg-light rounded-3 p-3">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted small">Ngày khởi tạo</span>
                        <span class="small fw-bold">@Model.CreatedAt.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted small">Cập nhật cuối</span>
                        <span class="small fw-bold">@DateTime.Now.ToString("dd/MM/yyyy")</span>
                    </div>
                </div>
            </div>

            @* Tips hoặc Ghi chú nhanh *@
            <div class="alert alert-info border-0 shadow-sm rounded-4 mt-4 small">
                <i class="fas fa-lightbulb me-2"></i>
                <strong>Mẹo:</strong> Nếu thiết bị hỏng do khách thuê, hãy ghi nhận vào biên bản thanh lý để khấu trừ tiền cọc.
            </div>
        </div>
    </div>
</div>

<style>
    /* CSS bổ sung để khớp với hệ thống của bạn */
    .border-dashed {
        border: 1px dashed #dee2e6;
    }

    .bg-soft-success {
        background: #e3fcef;
        color: #00875a;
    }

    .bg-soft-warning {
        background: #fff8e6;
        color: #947600;
    }

    .bg-soft-danger {
        background: #ffebe6;
        color: #bf2600;
    }

    .bg-soft-secondary {
        background: #f4f5f7;
        color: #42526e;
    }
</style>