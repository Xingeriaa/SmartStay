@model do_an_tot_nghiep.Models.RoomAsset
@{
    ViewData["Title"] = "Chi tiết thiết bị";
}

<div class="container-fluid">
    <div class="page-header">
        <h3 class="page-title text-gradient">Chi tiết thiết bị</h3>
        <p class="text-muted">Theo dõi thông tin và vòng đời sử dụng</p>
    </div>

    <div class="card main-card p-4">
        <dl class="row mb-4">
            <dt class="col-sm-3">Tên</dt>
            <dd class="col-sm-9 fw-semibold">@Model.AssetName</dd>

            <dt class="col-sm-3">Serial</dt>
            <dd class="col-sm-9">@Model.SerialNumber</dd>

            <dt class="col-sm-3">Số lượng</dt>
            <dd class="col-sm-9">@Model.Quantity</dd>

            <dt class="col-sm-3">Trạng thái</dt>
            <dd class="col-sm-9">
                @{
                    var statusText = Model.Status == 1 ? "Hoạt động"
                        : Model.Status == 2 ? "Hư hỏng"
                        : "Thanh lý";
                    var statusClass = Model.Status == 1 ? "badge-modern"
                        : Model.Status == 2 ? "badge bg-light text-danger"
                        : "badge bg-light text-muted";
                }
                <span class="@statusClass">@statusText</span>
            </dd>

            <dt class="col-sm-3">Ngày mua</dt>
            <dd class="col-sm-9">@Model.PurchaseDate?.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Bảo hành đến</dt>
            <dd class="col-sm-9">@Model.WarrantyExpiry?.ToString("dd/MM/yyyy")</dd>
        </dl>

        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-grad">Sửa</a>
            <a asp-action="Index" asp-route-roomId="@Model.RoomId" class="btn btn-outline-brand">Quay lại</a>
        </div>
    </div>
</div>
