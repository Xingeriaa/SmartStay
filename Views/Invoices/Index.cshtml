@section Scripts {
<script>
    const allRows = Array.from(document.querySelectorAll('#dataTable tbody tr[data-status]'));

    function filterStatus(st) {
        document.getElementById('filterStatus').value = st;
        applyFilters();
    }

    function applyFilters() {
        const q      = document.getElementById('searchInput').value.toLowerCase().trim();
        const status = document.getElementById('filterStatus').value;
        const month  = document.getElementById('filterMonth').value; // "2025-01"
        const amtR   = document.getElementById('filterAmount').value;
        let [aMin, aMax] = amtR ? amtR.split('-').map(Number) : [0, Infinity];
        if (!amtR) { aMin=0; aMax=Infinity; }

        let visible = 0;
        allRows.forEach(row => {
            const matchQ  = !q || row.dataset.name?.includes(q) || row.dataset.code?.includes(q);
            const matchSt = !status || row.dataset.status === status;
            // month filter: MonthYear might be "01/2025" format
            const rowMonth = row.dataset.month || '';
            const matchM  = !month || rowMonth.includes(month.split('-').reverse().join('/')) || rowMonth.includes(month);
            const amt     = parseInt(row.dataset.amount)||0;
            const matchA  = amt >= aMin && amt <= aMax;
            const show    = matchQ && matchSt && matchM && matchA;
            row.style.display = show ? '' : 'none';
            if (show) visible++;
        });
        ['visibleCount','footerCount'].forEach(id => document.getElementById(id).textContent = visible);
        document.getElementById('noResultsMsg').classList.toggle('d-none', visible > 0 || allRows.length === 0);
        renderTags(q, status, month, amtR);
    }

    function renderTags(q, status, month, amtR) {
        const c = document.getElementById('filterTags'); c.innerHTML='';
        const tag = (l,cl) => c.innerHTML+=`<span class="badge bg-soft-brand text-brand border px-3 py-2 rounded-pill" style="font-size:.8rem">${l} <span style="cursor:pointer;margin-left:6px" onclick="${cl}">‚úï</span></span>`;
        if (q) tag(`üîç "${q}"`,`document.getElementById('searchInput').value='';applyFilters()`);
        const sl={Paid:'ƒê√£ TT',Unpaid:'Ch·ªù TT',Overdue:'Qu√° h·∫°n'};
        if (status) tag(`üìÑ ${sl[status]}`,`document.getElementById('filterStatus').value='';applyFilters()`);
        if (month)  tag(`üìÖ ${month}`,`document.getElementById('filterMonth').value='';applyFilters()`);
        const al={'0-2000000':'<2tr','2000000-5000000':'2-5tr','5000000-10000000':'5-10tr','10000000-99999999':'>10tr'};
        if (amtR) tag(`üí∞ ${al[amtR]}`,`document.getElementById('filterAmount').value='';applyFilters()`);
    }

    function resetFilters() {
        ['searchInput','filterStatus','filterMonth','filterAmount'].forEach(id=>document.getElementById(id).value='');
        applyFilters();
    }
</script>
}
