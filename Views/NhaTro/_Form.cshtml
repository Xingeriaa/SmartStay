@model do_an_tot_nghiep.ViewModels.NhaTroFormViewModel

<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

<h5 class="mb-3 text-secondary border-bottom pb-2">Thông Tin Cơ Bản</h5>
<div class="row">
    <div class="col-md-6 mb-3">
        <label asp-for="TenNhaTro" class="form-label fw-bold"></label>
        <input asp-for="TenNhaTro" class="form-control" placeholder="Ví dụ: Tòa Nhà A1 SmartStay" />
        <span asp-validation-for="TenNhaTro" class="text-danger"></span>
    </div>
    <div class="col-md-6 mb-3">
        <label asp-for="OperationDate" class="form-label fw-bold"></label>
        <input asp-for="OperationDate" class="form-control" />
        <span asp-validation-for="OperationDate" class="text-danger"></span>
    </div>
</div>

<h5 class="mb-3 text-secondary border-bottom pb-2 mt-3">Địa Chỉ & Vị Trí</h5>
<div class="row">
    <div class="col-md-4 mb-3">
        <label asp-for="TinhThanh" class="form-label fw-bold"></label>
        <input asp-for="TinhThanh" class="form-control" placeholder="Tỉnh / Thành phố" />
    </div>
    <div class="col-md-4 mb-3">
        <label asp-for="QuanHuyen" class="form-label fw-bold"></label>
        <input asp-for="QuanHuyen" class="form-control" placeholder="Quận / Huyện" />
    </div>
    <div class="col-md-4 mb-3">
        <label asp-for="PhuongXa" class="form-label fw-bold"></label>
        <input asp-for="PhuongXa" class="form-control" placeholder="Phường / Xã" />
    </div>
</div>
<div class="row">
    <div class="col-md-12 mb-3">
        <label asp-for="DiaChiChiTiet" class="form-label fw-bold"></label>
        <input asp-for="DiaChiChiTiet" class="form-control" placeholder="Số nhà, tên đường, hẻm cụ thể..." />
        <span asp-validation-for="DiaChiChiTiet" class="text-danger"></span>
    </div>
</div>

<h5 class="mb-3 text-secondary border-bottom pb-2 mt-3">Thông Tin Vận Hành</h5>
<div class="row">
    <div class="col-md-6 mb-3">
        <label asp-for="GiaThue" class="form-label fw-bold"></label>
        <div class="input-group">
            <input asp-for="GiaThue" class="form-control" />
            <span class="input-group-text">VNĐ</span>
        </div>
        <span asp-validation-for="GiaThue" class="text-danger"></span>
        <small class="text-muted">Giá dùng để tham khảo chung cho các phòng con</small>
    </div>
    <div class="col-md-6 mb-3">
        <label asp-for="NgayThuTien" class="form-label fw-bold"></label>
        <div class="input-group">
            <span class="input-group-text">Ngày</span>
            <input asp-for="NgayThuTien" class="form-control" type="number" min="1" max="31" />
            <span class="input-group-text">Hàng tháng</span>
        </div>
        <span asp-validation-for="NgayThuTien" class="text-danger"></span>
    </div>
</div>

<div class="row">
    <div class="col-md-12 mb-3">
        <label asp-for="DanhSachDichVu" class="form-label fw-bold"></label>
        <textarea asp-for="DanhSachDichVu" class="form-control" rows="2" placeholder="Wifi, Thang máy, Hầm xe bảo vệ 24/7..."></textarea>
    </div>
    <div class="col-md-12 mb-3">
        <label asp-for="GhiChu" class="form-label fw-bold"></label>
        <textarea asp-for="GhiChu" class="form-control" rows="2" placeholder="Thông tin nội bộ ban quản lý..."></textarea>
    </div>
</div>
