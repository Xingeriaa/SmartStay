@model do_an_tot_nghiep.ViewModels.NhaTroFormViewModel

@{
    ViewData["Title"] = "Chi Tiết Tòa Nhà";
}

<div class="card shadow mb-4 col-md-10 mx-auto">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-info">Thông Tin Tòa Nhà: @Model.TenNhaTro</h6>
        <a asp-action="Index" class="btn btn-secondary btn-sm"><i class="fas fa-arrow-left"></i> Quay lại</a>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-sm-4 font-weight-bold">Tên Tòa Nhà:</div>
            <div class="col-sm-8">@Model.TenNhaTro</div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-4 font-weight-bold">Địa Chỉ Đầy Đủ:</div>
            <div class="col-sm-8">@Model.DiaChiChiTiet</div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-4 font-weight-bold">Giá Thuê Tham Khảo:</div>
            <div class="col-sm-8 text-success font-weight-bold">@Model.GiaThue.ToString("N0") VNĐ</div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-4 font-weight-bold">Quy Định Thu Tiền:</div>
            <div class="col-sm-8 text-danger">Ngày @Model.NgayThuTien hàng tháng</div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-4 font-weight-bold">Tiện Ích Chung:</div>
            <div class="col-sm-8">@(string.IsNullOrEmpty(Model.DanhSachDichVu) ? "Không có dữ liệu" : Model.DanhSachDichVu)</div>
        </div>
        
        <hr />
        <div class="text-center mt-4">
            <a asp-controller="PhongTro" asp-action="Index" asp-route-buildingId="@Model.Id" class="btn btn-primary btn-lg"><i class="fas fa-door-open"></i> Xem Danh Sách Phòng Của Tòa Nhà Này</a>
        </div>
    </div>
</div>
