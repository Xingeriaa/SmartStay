@model IEnumerable<do_an_tot_nghiep.ViewModels.NhaTroListItemViewModel>

@{
    ViewData["Title"] = "Quản Lý Tòa Nhà";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Danh Sách Tòa Nhà (Buildings)</h6>
        <a asp-action="Create" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> Thêm Tòa Nhà Mới
        </a>
    </div>
    <div class="card-body">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th>Tên Tòa Nhà</th>
                        <th>Địa Chỉ</th>
                        <th>Giá Thuê Khu Vực</th>
                        <th>Ngày Vận Hành</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="font-weight-bold text-dark">@item.TenNhaTro</td>
                            <td>@item.DiaChiChiTiet</td>
                            <td class="text-success font-weight-bold">@item.GiaThue.ToString("N0") VNĐ</td>
                            <td>@Html.DisplayFor(modelItem => item.OperationDate)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Chỉnh Sửa"><i class="fas fa-edit"></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Vào Quản Lý Phòng"><i class="fas fa-door-open"></i> Quản Lý Phòng</a>
                                
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa Tòa Nhà này? Quá trình sẽ sử dụng Soft Delete để bảo vệ dữ liệu.');">
                                    <button type="submit" class="btn btn-danger btn-sm" title="Xóa"><i class="fas fa-trash-alt"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
