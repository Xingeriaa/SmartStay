@using do_an_tot_nghiep.ViewModels
@model PhongTroListItemViewModel
@{
    ViewData["Title"] = $"Chi tiết Phòng {Model.TenPhong}";

    string statusLabel = Model.Status switch
    {
        "Occupied" => "Đang thuê",
        "Vacant"   => "Trống",
        "Maintenance" => "Bảo trì",
        _ => Model.Status
    };
    string statusColor = Model.Status switch
    {
        "Occupied"    => "#d63031",
        "Vacant"      => "#00b894",
        "Maintenance" => "#e67e22",
        _ => "#636e72"
    };
}

<div style="max-width:820px;margin:0 auto;">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb small">
            <li class="breadcrumb-item"><a asp-action="Index" class="text-muted text-decoration-none"><i class="fas fa-door-open me-1"></i>Danh sách phòng</a></li>
            <li class="breadcrumb-item active">Phòng @Model.TenPhong</li>
        </ol>
    </nav>

    @if (TempData["Success"] != null) { <div class="alert alert-success border-0 mb-3">@TempData["Success"]</div> }
    @if (TempData["Error"]   != null) { <div class="alert alert-danger border-0 mb-3">@TempData["Error"]</div> }

    <div class="card border-0 shadow-sm rounded-4 mb-3">
        <div class="card-header bg-white border-0 py-3 px-4 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-3">
                <div style="width:48px;height:48px;background:linear-gradient(135deg,#6c5ce7,#a29bfe);border-radius:14px;display:flex;align-items:center;justify-content:center;">
                    <i class="fas fa-door-open text-white fa-lg"></i>
                </div>
                <div>
                    <h4 class="mb-0 fw-bold">Phòng @Model.TenPhong</h4>
                    <small class="text-muted">ID: @Model.Id · Tòa nhà #@Model.NhaTroId</small>
                </div>
            </div>
            <span class="badge px-3 py-2 rounded-pill" style="background:@statusColor;color:#fff;font-size:.85rem;">@statusLabel</span>
        </div>

        <div class="card-body p-4">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="p-3 rounded-3 text-center" style="background:#f0edff;">
                        <div class="text-muted small mb-1"><i class="fas fa-tags me-1"></i>Giá thuê / tháng</div>
                        <div class="fw-bold fs-4" style="color:#6c5ce7;">@Model.GiaPhong.ToString("N0") đ</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="p-3 rounded-3 text-center" style="background:#f0fff4;">
                        <div class="text-muted small mb-1"><i class="fas fa-ruler-combined me-1"></i>Diện tích</div>
                        <div class="fw-bold fs-4 text-success">@Model.DienTich.ToString("N1") m²</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="p-3 rounded-3 text-center" style="background:#fff8e1;">
                        <div class="text-muted small mb-1"><i class="fas fa-users me-1"></i>Sức chứa</div>
                        <div class="fw-bold fs-4 text-warning">@Model.SoLuongNguoi người</div>
                    </div>
                </div>
            </div>

            <div class="row g-3 mt-1">
                <div class="col-6">
                    <div class="text-muted small mb-1">Tầng</div>
                    <div class="fw-semibold">Tầng @Model.Tang</div>
                </div>
                <div class="col-6">
                    <div class="text-muted small mb-1">Trạng thái</div>
                    <span class="badge" style="background:@statusColor;color:#fff;">@statusLabel</span>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex flex-wrap gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="fas fa-edit me-1"></i>Chỉnh sửa
        </a>
        <a asp-controller="HopDong" asp-action="Index" class="btn btn-light border">
            <i class="fas fa-file-contract me-1"></i>Xem hợp đồng
        </a>
        <a asp-controller="MeterReadings" asp-action="Index" asp-route-roomId="@Model.Id" class="btn btn-light border">
            <i class="fas fa-tachometer-alt me-1"></i>Điện nước
        </a>
        <a asp-action="Index" class="btn btn-light border">
            <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
    </div>
</div>
