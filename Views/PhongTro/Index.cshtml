@model IEnumerable<do_an_tot_nghiep.ViewModels.PhongTroListItemViewModel>

@{
    ViewData["Title"] = "Quản lý Phòng Trọ";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center bg-white">
        <h6 class="m-0 font-weight-bold text-success"><i class="fas fa-door-closed"></i> Danh Sách Quản Lý Phòng</h6>
        <div class="d-flex gx-2">
            <a asp-controller="NhaTro" asp-action="Index" class="btn btn-secondary btn-sm me-2">
                <i class="fas fa-building"></i> Quay Lại DS Tòa Nhà
            </a>
            <a asp-action="Create" asp-route-buildingId="@ViewBag.BuildingId" class="btn btn-success btn-sm shadow-sm">
                <i class="fas fa-plus"></i> Khởi Tạo Phòng Mới
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="table-responsive mt-2">
            <table class="table table-bordered table-striped align-middle" id="dataTable" width="100%" cellspacing="0">
                <thead class="table-dark text-white">
                    <tr>
                        <th class="text-center">Building ID</th>
                        <th class="text-center">Tầng</th>
                        <th>Mã Phòng</th>
                        <th>Diện Tích</th>
                        <th>Base Price</th>
                        <th class="text-center">SL Người</th>
                        <th class="text-center">Trạng Thái (Status)</th>
                        <th class="text-center">Action Admin</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center font-weight-bold text-secondary">#@item.NhaTroId</td>
                            <td class="text-center fw-bold">Tầng @item.Tang</td>
                            <td class="font-weight-bold text-primary"><i class="fas fa-door-open text-muted"></i> @item.TenPhong</td>
                            <td>@Html.DisplayFor(modelItem => item.DienTich)</td>
                            <td class="text-success fw-bold">@item.GiaPhong.ToString("N0") VNĐ</td>
                            <td class="text-center"><span class="badge bg-info text-dark">Max @item.SoLuongNguoi prs</span></td>
                            <td class="text-center">
                                @if (item.Status == "Vacant")
                                {
                                    <span class="badge bg-success rounded-pill px-3 py-2"><i class="fas fa-check-circle"></i> Trống (Vacant)</span>
                                }
                                else if (item.Status == "Occupied")
                                {
                                    <span class="badge bg-danger rounded-pill px-3 py-2 text-white"><i class="fas fa-user-lock"></i> Đang Thuê</span>
                                }
                                else if (item.Status == "Maintenance")
                                {
                                    <span class="badge bg-warning text-dark rounded-pill px-3 py-2"><i class="fas fa-tools"></i> Bảo Trì</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary rounded-pill">@item.Status</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Edit Phòng"><i class="fas fa-edit"></i></a>
                                
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('SOFT DELETE: Bạn có chắc chắn muốn xóa phòng này khỏi tòa nhà? Tác vụ bị từ chối nếu phòng đang cho thuê.');">
                                    <button type="submit" class="btn btn-danger btn-sm" title="Delete"><i class="fas fa-trash-alt"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
